        {
            "id": "rec-serverless",
            "technology": "Serverless / FaaS",
            "description": "Arquitectura donde el proveedor cloud maneja servidores. Pagas por ejecución, no por tiempo activo.",
            "pros": [
                "Sin gestión de servidores",
                "Escalado automático a cero",
                "Pago por uso (cost-efficient para cargas variables)",
                "Time-to-market rápido",
                "Alta disponibilidad built-in"
            ],
            "cons": [
                "Cold starts (latencia inicial)",
                "Límites de ejecución (timeout)",
                "Vendor lock-in",
                "Debugging más complejo",
                "Stateless por naturaleza"
            ],
            "bestFor": [
                "APIs y webhooks",
                "Procesamiento de eventos",
                "Cron jobs y tareas programadas",
                "Cargas de trabajo variables",
                "Procesamiento de archivos (S3 triggers)"
