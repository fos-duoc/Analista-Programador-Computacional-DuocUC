    "recommendations": [
        {
            "id": "rec-modular-monolith",
            "technology": "Modular Monolith",
            "description": "Arquitectura monolítica bien estructurada con módulos internos desacoplados. Recomendada por Martin Fowler como punto de partida.",
            "pros": [
                "Simplicidad operacional (un deploy)",
                "Transacciones ACID fáciles",
                "Debugging más simple (un proceso)",
                "Menor latencia (sin network hops)",
                "Fácil de refactorizar a microservicios después"
            ],
            "cons": [
                "Escalabilidad: todo escala junto",
                "Un bug puede afectar todo el sistema",
                "Deployment monolítico (todo o nada)",
                "Tech stack único"
            ],
            "bestFor": [
                "Startups y MVPs",
                "Equipos pequeños (1-10 devs)",
                "Dominios no completamente definidos",
                "Cuando el time-to-market es crítico"
            ],
