                {
                    "label": "Datos estructurados con relaciones claras (tablas, filas, columnas)",
                    "value": "structured",
                    "leadsTo": "q2-scale"
                },
                {
                    "label": "Datos semiestructurados o sin esquema fijo (JSON, documentos)",
                    "value": "semi-structured",
                    "leadsTo": "q3-nosql-type"
                },
                {
                    "label": "Grafos con muchas relaciones entre entidades",
                    "value": "graph",
                    "leadsTo": "rec-graph"
                },
                {
                    "label": "Series de tiempo (métricas, logs, IoT)",
                    "value": "timeseries",
                    "leadsTo": "rec-timeseries"
                }
            ]
        },
        {
            "id": "q2-scale",
            "question": "¿Qué escala de datos manejarás?",
