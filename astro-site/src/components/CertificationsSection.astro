<style>
    .certs-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .certs-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .certs-icon-wrap {
        width: 70px;
        height: 70px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(239, 68, 68, 0.2));
        border: 2px solid rgba(245, 158, 11, 0.4);
        border-radius: 18px;
        font-size: 1.75rem;
        color: #f59e0b;
    }

    .certs-header h2 {
        font-size: 2.25rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .certs-header p {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    .certs-grid {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .cert-category h3 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .cert-category h3 i {
        color: var(--accent-primary);
    }

    .cert-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1rem;
    }

    .cert-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.25rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cert-card:hover {
        background: rgba(0, 212, 255, 0.05);
        border-color: rgba(0, 212, 255, 0.3);
        transform: translateY(-2px);
    }

    .cert-logo {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        font-size: 1.75rem;
    }

    .cert-card.aws .cert-logo { color: #ff9900; }
    .cert-card.azure .cert-logo { color: #0078d4; }
    .cert-card.gcp .cert-logo { color: #4285f4; }
    .cert-card.github .cert-logo { color: var(--text-primary); }
    .cert-card.oracle .cert-logo { color: #f80000; }
    .cert-card.docker .cert-logo { color: #2496ed; }
    .cert-card.kubernetes .cert-logo { color: #326ce5; }
    .cert-card.scrum .cert-logo { color: #7c3aed; }
    .cert-card.google .cert-logo { color: #4285f4; }
    .cert-card.freecodecamp .cert-logo { color: #61dafb; }
    .cert-card.databricks .cert-logo { color: #ff3621; }
    .cert-card.snowflake .cert-logo { color: #29b5e8; }
    .cert-card.terraform .cert-logo { color: #7b42bc; }
    .cert-card.atlassian .cert-logo { color: #0052cc; }

    .simple-icon-cert {
        width: 32px;
        height: 32px;
        object-fit: contain;
    }

    .cert-badge.hot {
        background: rgba(239, 68, 68, 0.15);
        color: #ef4444;
    }

    .cert-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .cert-name {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .cert-level {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .cert-badge {
        font-size: 0.7rem;
        font-weight: 600;
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        background: rgba(255, 255, 255, 0.1);
        color: var(--text-secondary);
        white-space: nowrap;
    }

    .cert-badge.free {
        background: rgba(16, 185, 129, 0.15);
        color: #10b981;
    }

    .certs-tip {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-top: 2rem;
        padding: 1.25rem 1.5rem;
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        border-radius: 12px;
    }

    .certs-tip i {
        color: #f59e0b;
        font-size: 1.25rem;
        margin-top: 0.1rem;
    }

    .certs-tip p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        margin: 0;
    }

    .certs-tip strong {
        color: var(--text-primary);
    }

    @media (max-width: 768px) {
        .certs-header h2 {
            font-size: 1.75rem;
        }

        .cert-cards {
            grid-template-columns: 1fr;
        }

        .cert-card {
            padding: 0.875rem 1rem;
        }
    }

    /* Light mode */
    :global([data-theme="light"]) .cert-card {
        background: rgba(0, 0, 0, 0.02);
    }

    :global([data-theme="light"]) .cert-card:hover {
        background: rgba(0, 212, 255, 0.08);
    }

    :global([data-theme="light"]) .cert-logo {
        background: rgba(0, 0, 0, 0.05);
    }

    :global([data-theme="light"]) .cert-card.github .cert-logo {
        color: #24292f;
    }
</style>
