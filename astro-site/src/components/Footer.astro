---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;

// Quick links del footer
const quickLinks = [
    { name: "Inicio", href: `${base}/inicio`, icon: "fa-home" },
    { name: "Stack", href: `${base}/stack`, icon: "fa-layer-group" },
    { name: "Arquitectura", href: `${base}/arquitectura`, icon: "fa-sitemap" },
    { name: "Recursos", href: `${base}/recursos`, icon: "fa-book-open" },
    { name: "Proyectos", href: `${base}/proyectos`, icon: "fa-folder-open" }
];

// Recursos externos
const externalLinks = [
    { name: "GitHub", href: "https://github.com/fos-duoc/Analista-Programador-Computacional-DuocUC", icon: "fab fa-github" },
    { name: "GitLab", href: "https://gitlab.com/fos-duoc/analista-programador-computacional-duocuc", icon: "fab fa-gitlab" },
    { name: "DuocUC", href: "https://www.duoc.cl/", icon: "fas fa-graduation-cap" }
];

// Tech stack usado
const techStack = [
    { name: "Astro", icon: "devicon-astro-plain", color: "#ff5a03" },
    { name: "TypeScript", icon: "devicon-typescript-plain", color: "#3178c6" },
    { name: "CSS3", icon: "devicon-css3-plain", color: "#264de4" },
    { name: "HTML5", icon: "devicon-html5-plain", color: "#e34c26" }
];

// Stats compactos
const stats = [
    { value: "17", label: "Bimestres" },
    { value: "30+", label: "Asignaturas" },
    { value: "2", label: "Carreras" }
];
---

<footer class="footer-compact">
    <!-- Wave separator más pequeño -->
    <div class="footer-wave">
        <svg viewBox="0 0 1440 60" preserveAspectRatio="none">
            <path d="M0,30 C360,60 720,0 1080,30 C1260,45 1380,15 1440,30 L1440,60 L0,60 Z" fill="url(#waveGradient)"/>
            <defs>
                <linearGradient id="waveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:rgba(0,212,255,0.08)"/>
                    <stop offset="50%" style="stop-color:rgba(124,58,237,0.08)"/>
                    <stop offset="100%" style="stop-color:rgba(244,114,182,0.08)"/>
                </linearGradient>
            </defs>
        </svg>
    </div>

    <div class="footer-container">
        <!-- Main Row: Brand + Nav + External + Stats -->
        <div class="footer-main-row">
            <!-- Brand -->
            <div class="footer-brand">
                <div class="brand-logo">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <div class="brand-text">
                    <span class="brand-title">Analista Programador Computacional</span>
                    <span class="brand-subtitle">DuocUC Online {currentYear}</span>
                </div>
            </div>

            <!-- Quick Nav -->
            <nav class="footer-nav">
                {quickLinks.map((link) => (
                    <a href={link.href} class="nav-link">
                        <i class={`fas ${link.icon}`}></i>
                        {link.name}
                    </a>
                ))}
            </nav>

            <!-- External Links -->
            <div class="footer-external">
                {externalLinks.map((link) => (
                    <a href={link.href} target="_blank" rel="noopener noreferrer" class="external-link" title={link.name}>
                        <i class={link.icon}></i>
                    </a>
                ))}
            </div>

            <!-- Stats Row -->
            <div class="footer-stats">
                {stats.map((stat, i) => (
                    <>
                        <div class="stat-item">
                            <span class="stat-num">{stat.value}</span>
                            <span class="stat-lbl">{stat.label}</span>
                        </div>
                        {i < stats.length - 1 && <span class="stat-divider">|</span>}
                    </>
                ))}
            </div>
        </div>

        <!-- Bottom Row: Copyright + Tech + Back to Top -->
        <div class="footer-bottom-row">
            <div class="footer-copyright">
                <i class="far fa-copyright"></i> {currentYear}
                <span class="highlight">APC</span> - DuocUC
                <span class="separator">·</span>
                Hecho con <i class="fas fa-heart heart"></i> y <i class="fas fa-coffee coffee"></i> usando
                <a href="https://astro.build" target="_blank" class="astro-link">
                    <i class="devicon-astro-plain"></i> Astro
                </a>
            </div>

            <div class="footer-tech">
                <span class="tech-label">Built with:</span>
                {techStack.map((tech) => (
                    <div class="tech-icon" style={`--color: ${tech.color};`} title={tech.name}>
                        <i class={tech.icon}></i>
                    </div>
                ))}
            </div>

            <button class="back-to-top" id="footerBackToTop">
                <i class="fas fa-arrow-up"></i>
            </button>
        </div>
    </div>

    <!-- Background circles -->
    <div class="footer-bg">
        <div class="bg-circle c1"></div>
        <div class="bg-circle c2"></div>
    </div>
</footer>

<script>
    document.addEventListener('astro:page-load', () => {
        const backToTop = document.getElementById('footerBackToTop');
        if (backToTop) {
            backToTop.onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    });
</script>

<style>
    .footer-compact {
        position: relative;
        background: linear-gradient(180deg, var(--bg-primary) 0%, rgba(8, 8, 16, 0.98) 100%);
        overflow: hidden;
    }

    .footer-wave {
        position: absolute;
        top: -1px;
        left: 0;
        right: 0;
        height: 60px;
    }

    .footer-wave svg {
        width: 100%;
        height: 100%;
    }

    .footer-container {
        position: relative;
        z-index: 2;
        max-width: 1400px;
        margin: 0 auto;
        padding: 4rem 2rem 1.5rem;
    }

    /* Main Row */
    .footer-main-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
        padding-bottom: 1.25rem;
        border-bottom: 1px solid rgba(255,255,255,0.06);
    }

    /* Brand */
    .footer-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .brand-logo {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(0,212,255,0.15), rgba(124,58,237,0.15));
        border-radius: 12px;
        border: 1px solid rgba(0,212,255,0.25);
    }

    .brand-logo i {
        font-size: 1.25rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .brand-text {
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
    }

    .brand-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-primary);
        font-family: 'Space Grotesk', sans-serif;
    }

    .brand-subtitle {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    /* Navigation */
    .footer-nav {
        display: flex;
        gap: 0.25rem;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.75rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.85rem;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

    .nav-link i {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .nav-link:hover {
        background: rgba(0,212,255,0.1);
        color: #00d4ff;
    }

    .nav-link:hover i {
        color: #00d4ff;
    }

    /* External Links */
    .footer-external {
        display: flex;
        gap: 0.5rem;
    }

    .external-link {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.05);
        border-radius: 8px;
        color: var(--text-secondary);
        transition: all 0.2s ease;
    }

    .external-link:hover {
        background: rgba(0,212,255,0.15);
        color: #00d4ff;
        transform: translateY(-2px);
    }

    /* Stats */
    .footer-stats {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .stat-item {
        display: flex;
        align-items: baseline;
        gap: 0.35rem;
    }

    .stat-num {
        font-size: 1.1rem;
        font-weight: 700;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: 'Space Grotesk', sans-serif;
    }

    .stat-lbl {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .stat-divider {
        color: rgba(255,255,255,0.15);
        font-weight: 300;
    }

    /* Bottom Row */
    .footer-bottom-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 1rem;
        gap: 1.5rem;
    }

    .footer-copyright {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    .footer-copyright .highlight {
        color: var(--text-secondary);
        font-weight: 500;
    }

    .footer-copyright .separator {
        color: rgba(255,255,255,0.2);
        margin: 0 0.25rem;
    }

    .heart {
        color: #ef4444;
        animation: heartBeat 1.5s ease-in-out infinite;
    }

    @keyframes heartBeat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.15); }
    }

    .coffee {
        color: #d97706;
    }

    .astro-link {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        color: #ff5a03;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

    .astro-link:hover {
        color: #ff7a33;
    }

    /* Tech Stack */
    .footer-tech {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .tech-label {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .tech-icon {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.04);
        border-radius: 6px;
        border: 1px solid rgba(255,255,255,0.08);
        transition: all 0.2s ease;
    }

    .tech-icon i {
        font-size: 0.9rem;
        color: var(--color);
    }

    .tech-icon:hover {
        transform: translateY(-2px);
        border-color: var(--color);
    }

    /* Back to Top */
    .back-to-top {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0,212,255,0.1);
        border: 1px solid rgba(0,212,255,0.2);
        border-radius: 8px;
        color: #00d4ff;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-to-top:hover {
        background: rgba(0,212,255,0.2);
        transform: translateY(-2px);
    }

    /* Background */
    .footer-bg {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 1;
    }

    .bg-circle {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.12;
    }

    .c1 {
        width: 300px;
        height: 300px;
        background: #00d4ff;
        bottom: -150px;
        left: -50px;
    }

    .c2 {
        width: 200px;
        height: 200px;
        background: #7c3aed;
        bottom: -100px;
        right: 10%;
    }

    /* Light Mode */
    :global([data-theme="light"]) .footer-compact {
        background: linear-gradient(180deg, var(--bg-primary) 0%, #e2e8f0 100%);
    }

    :global([data-theme="light"]) .brand-logo {
        background: linear-gradient(135deg, rgba(0,212,255,0.1), rgba(124,58,237,0.1));
    }

    :global([data-theme="light"]) .external-link,
    :global([data-theme="light"]) .tech-icon {
        background: rgba(0,0,0,0.04);
        border-color: rgba(0,0,0,0.08);
    }

    :global([data-theme="light"]) .footer-main-row {
        border-bottom-color: rgba(0,0,0,0.08);
    }

    :global([data-theme="light"]) .bg-circle {
        opacity: 0.06;
    }

    /* Responsive */
    @media (max-width: 1100px) {
        .footer-main-row {
            flex-wrap: wrap;
            justify-content: center;
            text-align: center;
        }

        .footer-brand {
            width: 100%;
            justify-content: center;
        }

        .footer-nav {
            justify-content: center;
            flex-wrap: wrap;
        }

        .footer-stats {
            width: 100%;
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .footer-container {
            padding: 3rem 1.5rem 1.25rem;
        }

        .footer-bottom-row {
            flex-direction: column;
            gap: 1rem;
        }

        .footer-copyright {
            flex-wrap: wrap;
            justify-content: center;
            text-align: center;
        }

        .footer-tech {
            order: -1;
        }
    }

    @media (max-width: 480px) {
        .nav-link span {
            display: none;
        }

        .nav-link {
            padding: 0.5rem;
        }

        .nav-link i {
            font-size: 1rem;
        }

        .brand-title {
            font-size: 0.85rem;
        }
    }
</style>
