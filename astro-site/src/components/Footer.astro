---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;

// Quick links del footer
const quickLinks = [
    { name: "Inicio", href: `${base}/inicio`, icon: "fa-home" },
    { name: "Stack", href: `${base}/stack`, icon: "fa-layer-group" },
    { name: "Arquitectura", href: `${base}/arquitectura`, icon: "fa-sitemap" },
    { name: "Recursos", href: `${base}/recursos`, icon: "fa-book-open" },
    { name: "Proyectos", href: `${base}/proyectos`, icon: "fa-folder-open" }
];

// Recursos externos
const externalLinks = [
    { name: "GitHub", href: "https://github.com/fos-duoc/Analista-Programador-Computacional-DuocUC", icon: "fab fa-github", color: "#f8fafc" },
    { name: "GitLab", href: "https://gitlab.com/fos-duoc/analista-programador-computacional-duocuc", icon: "fab fa-gitlab", color: "#FC6D26" },
    { name: "DuocUC", href: "https://www.duoc.cl/", icon: "fas fa-graduation-cap", color: "#00d4ff" },
    { name: "Astro", href: "https://astro.build", icon: "devicon-astro-plain", color: "#ff5a03" }
];

// Tech stack usado
const techStack = [
    { name: "Astro", icon: "devicon-astro-plain", color: "#ff5a03" },
    { name: "TypeScript", icon: "devicon-typescript-plain", color: "#3178c6" },
    { name: "CSS3", icon: "devicon-css3-plain", color: "#264de4" },
    { name: "HTML5", icon: "devicon-html5-plain", color: "#e34c26" }
];
---

<footer class="footer-premium">
    <!-- Wave separator -->
    <div class="footer-wave">
        <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
            <path d="M0,60 C360,120 720,0 1080,60 C1260,90 1380,30 1440,60 L1440,120 L0,120 Z" fill="url(#waveGradient)"/>
            <defs>
                <linearGradient id="waveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:rgba(0,212,255,0.1)"/>
                    <stop offset="50%" style="stop-color:rgba(124,58,237,0.1)"/>
                    <stop offset="100%" style="stop-color:rgba(244,114,182,0.1)"/>
                </linearGradient>
            </defs>
        </svg>
    </div>

    <div class="footer-container">
        <!-- Main Footer Content -->
        <div class="footer-grid">
            <!-- Brand Section -->
            <div class="footer-brand-section">
                <div class="footer-logo">
                    <div class="logo-icon-wrapper">
                        <i class="fas fa-laptop-code"></i>
                        <div class="logo-glow"></div>
                    </div>
                    <div class="logo-text">
                        <span class="logo-title">Analista Programador</span>
                        <span class="logo-subtitle">Computacional</span>
                    </div>
                </div>
                <p class="footer-tagline">
                    <i class="fas fa-university"></i>
                    DuocUC Online {currentYear}
                </p>
                <p class="footer-description">
                    Repositorio de materiales, recursos académicos y guías de estudio
                    para la carrera de Analista Programador Computacional e Ingeniería
                    en Desarrollo de Software.
                </p>

                <!-- Tech Stack Mini -->
                <div class="footer-tech-stack">
                    <span class="tech-label">Construido con:</span>
                    <div class="tech-icons">
                        {techStack.map((tech) => (
                            <div class="tech-icon-mini" style={`--color: ${tech.color};`} title={tech.name}>
                                <i class={tech.icon}></i>
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="footer-links-section">
                <h4 class="footer-section-title">
                    <i class="fas fa-compass"></i>
                    Navegación
                </h4>
                <ul class="footer-nav-list">
                    {quickLinks.map((link) => (
                        <li>
                            <a href={link.href} class="footer-nav-link">
                                <i class={`fas ${link.icon}`}></i>
                                <span>{link.name}</span>
                                <i class="fas fa-chevron-right arrow"></i>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- External Resources -->
            <div class="footer-resources-section">
                <h4 class="footer-section-title">
                    <i class="fas fa-external-link-alt"></i>
                    Recursos
                </h4>
                <ul class="footer-resources-list">
                    {externalLinks.map((link) => (
                        <li>
                            <a href={link.href} target="_blank" rel="noopener noreferrer"
                               class="footer-resource-link" style={`--link-color: ${link.color};`}>
                                <i class={link.icon}></i>
                                <span>{link.name}</span>
                                <i class="fas fa-arrow-up-right-from-square external-icon"></i>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Stats Mini -->
            <div class="footer-stats-section">
                <h4 class="footer-section-title">
                    <i class="fas fa-chart-bar"></i>
                    Estadísticas
                </h4>
                <div class="footer-stats-grid">
                    <div class="footer-stat-item">
                        <span class="stat-number">17</span>
                        <span class="stat-label">Bimestres</span>
                    </div>
                    <div class="footer-stat-item">
                        <span class="stat-number">30+</span>
                        <span class="stat-label">Asignaturas</span>
                    </div>
                    <div class="footer-stat-item">
                        <span class="stat-number">100+</span>
                        <span class="stat-label">Archivos</span>
                    </div>
                    <div class="footer-stat-item">
                        <span class="stat-number">2</span>
                        <span class="stat-label">Carreras</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider with gradient -->
        <div class="footer-divider">
            <div class="divider-line"></div>
            <div class="divider-icon">
                <i class="fas fa-code"></i>
            </div>
            <div class="divider-line"></div>
        </div>

        <!-- Bottom Bar -->
        <div class="footer-bottom-bar">
            <div class="footer-copyright">
                <p>
                    <i class="far fa-copyright"></i> {currentYear}
                    <span class="highlight">Analista Programador Computacional</span>
                    - DuocUC Online
                </p>
            </div>

            <div class="footer-made-with">
                <span>Hecho con</span>
                <i class="fas fa-heart heart-beat"></i>
                <span>y</span>
                <i class="fas fa-coffee coffee-steam"></i>
                <span>usando</span>
                <a href="https://astro.build" target="_blank" class="astro-link">
                    <i class="devicon-astro-plain"></i>
                    Astro
                </a>
            </div>

            <div class="footer-back-to-top" id="footerBackToTop">
                <i class="fas fa-arrow-up"></i>
                <span>Volver arriba</span>
            </div>
        </div>
    </div>

    <!-- Animated background elements -->
    <div class="footer-bg-elements">
        <div class="bg-circle circle-1"></div>
        <div class="bg-circle circle-2"></div>
        <div class="bg-circle circle-3"></div>
    </div>
</footer>

<script>
    // Back to top functionality
    document.addEventListener('astro:page-load', () => {
        const backToTop = document.getElementById('footerBackToTop');
        if (backToTop) {
            backToTop.addEventListener('click', () => {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        }
    });
</script>

<style>
    .footer-premium {
        position: relative;
        background: linear-gradient(180deg,
            var(--bg-primary) 0%,
            rgba(10, 10, 20, 0.98) 50%,
            rgba(5, 5, 15, 1) 100%
        );
        overflow: hidden;
    }

    /* Wave Separator */
    .footer-wave {
        position: absolute;
        top: -1px;
        left: 0;
        right: 0;
        height: 120px;
        overflow: hidden;
    }

    .footer-wave svg {
        width: 100%;
        height: 100%;
    }

    /* Container */
    .footer-container {
        position: relative;
        z-index: 2;
        max-width: 1400px;
        margin: 0 auto;
        padding: 8rem 2rem 2rem;
    }

    /* Grid Layout */
    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 3rem;
    }

    /* Brand Section */
    .footer-brand-section {
        padding-right: 2rem;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .logo-icon-wrapper {
        position: relative;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(0,212,255,0.2), rgba(124,58,237,0.2));
        border-radius: 16px;
        border: 1px solid rgba(0,212,255,0.3);
    }

    .logo-icon-wrapper i {
        font-size: 1.75rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .logo-glow {
        position: absolute;
        inset: -5px;
        background: radial-gradient(circle, rgba(0,212,255,0.3) 0%, transparent 70%);
        border-radius: 20px;
        filter: blur(10px);
        opacity: 0.5;
        animation: logoGlow 3s ease-in-out infinite;
    }

    @keyframes logoGlow {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.6; transform: scale(1.1); }
    }

    .logo-text {
        display: flex;
        flex-direction: column;
    }

    .logo-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        font-family: 'Space Grotesk', 'Sora', sans-serif;
    }

    .logo-subtitle {
        font-size: 1rem;
        font-weight: 600;
        background: linear-gradient(90deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .footer-tagline {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .footer-tagline i {
        color: #00d4ff;
    }

    .footer-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    /* Tech Stack Mini */
    .footer-tech-stack {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .tech-label {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    .tech-icons {
        display: flex;
        gap: 0.5rem;
    }

    .tech-icon-mini {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.05);
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.1);
        transition: all 0.3s ease;
    }

    .tech-icon-mini i {
        font-size: 1rem;
        color: var(--color);
    }

    .tech-icon-mini:hover {
        transform: translateY(-3px);
        border-color: var(--color);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    /* Section Titles */
    .footer-section-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-primary);
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.25rem;
        font-family: 'Space Grotesk', sans-serif;
    }

    .footer-section-title i {
        color: #00d4ff;
        font-size: 0.9rem;
    }

    /* Navigation Links */
    .footer-nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-nav-list li {
        margin-bottom: 0.5rem;
    }

    .footer-nav-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .footer-nav-link i:first-child {
        width: 18px;
        text-align: center;
        color: var(--text-muted);
        transition: color 0.3s ease;
    }

    .footer-nav-link .arrow {
        margin-left: auto;
        font-size: 0.7rem;
        opacity: 0;
        transform: translateX(-5px);
        transition: all 0.3s ease;
    }

    .footer-nav-link:hover {
        background: rgba(0,212,255,0.1);
        color: #00d4ff;
    }

    .footer-nav-link:hover i:first-child {
        color: #00d4ff;
    }

    .footer-nav-link:hover .arrow {
        opacity: 1;
        transform: translateX(0);
    }

    /* Resource Links */
    .footer-resources-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-resources-list li {
        margin-bottom: 0.5rem;
    }

    .footer-resource-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .footer-resource-link i:first-child {
        width: 18px;
        text-align: center;
        transition: color 0.3s ease;
    }

    .footer-resource-link .external-icon {
        margin-left: auto;
        font-size: 0.7rem;
        opacity: 0.5;
    }

    .footer-resource-link:hover {
        background: rgba(var(--link-color), 0.1);
        color: var(--link-color);
    }

    .footer-resource-link:hover i:first-child {
        color: var(--link-color);
    }

    /* Stats Section */
    .footer-stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .footer-stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background: rgba(255,255,255,0.03);
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.05);
        transition: all 0.3s ease;
    }

    .footer-stat-item:hover {
        border-color: rgba(0,212,255,0.3);
        transform: translateY(-2px);
    }

    .stat-number {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: 'Space Grotesk', sans-serif;
    }

    .stat-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Divider */
    .footer-divider {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin: 3rem 0 2rem;
    }

    .divider-line {
        flex: 1;
        height: 1px;
        background: linear-gradient(90deg,
            transparent 0%,
            rgba(0,212,255,0.3) 50%,
            transparent 100%
        );
    }

    .divider-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0,212,255,0.1);
        border-radius: 50%;
        border: 1px solid rgba(0,212,255,0.2);
    }

    .divider-icon i {
        color: #00d4ff;
        font-size: 0.9rem;
    }

    /* Bottom Bar */
    .footer-bottom-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .footer-copyright {
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    .footer-copyright .highlight {
        color: var(--text-secondary);
        font-weight: 500;
    }

    .footer-made-with {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    .heart-beat {
        color: #ef4444;
        animation: heartBeat 1.5s ease-in-out infinite;
    }

    @keyframes heartBeat {
        0%, 100% { transform: scale(1); }
        25% { transform: scale(1.2); }
        50% { transform: scale(1); }
        75% { transform: scale(1.2); }
    }

    .coffee-steam {
        color: #d97706;
        position: relative;
    }

    .astro-link {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        color: #ff5a03;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .astro-link:hover {
        color: #ff7a33;
        transform: translateY(-2px);
    }

    .footer-back-to-top {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(0,212,255,0.1);
        border: 1px solid rgba(0,212,255,0.2);
        border-radius: 20px;
        color: #00d4ff;
        font-size: 0.8rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .footer-back-to-top:hover {
        background: rgba(0,212,255,0.2);
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(0,212,255,0.2);
    }

    .footer-back-to-top i {
        font-size: 0.9rem;
    }

    /* Background Elements */
    .footer-bg-elements {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 1;
    }

    .bg-circle {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.15;
    }

    .circle-1 {
        width: 400px;
        height: 400px;
        background: #00d4ff;
        bottom: -200px;
        left: -100px;
    }

    .circle-2 {
        width: 300px;
        height: 300px;
        background: #7c3aed;
        bottom: -100px;
        right: 20%;
    }

    .circle-3 {
        width: 250px;
        height: 250px;
        background: #f472b6;
        bottom: -150px;
        right: -50px;
    }

    /* Light Mode */
    :global([data-theme="light"]) .footer-premium {
        background: linear-gradient(180deg,
            var(--bg-primary) 0%,
            #f1f5f9 50%,
            #e2e8f0 100%
        );
    }

    :global([data-theme="light"]) .logo-icon-wrapper {
        background: linear-gradient(135deg, rgba(0,212,255,0.15), rgba(124,58,237,0.15));
    }

    :global([data-theme="light"]) .footer-stat-item {
        background: rgba(0,0,0,0.03);
        border-color: rgba(0,0,0,0.08);
    }

    :global([data-theme="light"]) .tech-icon-mini {
        background: rgba(0,0,0,0.05);
        border-color: rgba(0,0,0,0.1);
    }

    :global([data-theme="light"]) .footer-nav-link:hover,
    :global([data-theme="light"]) .footer-resource-link:hover {
        background: rgba(0,212,255,0.1);
    }

    :global([data-theme="light"]) .divider-line {
        background: linear-gradient(90deg,
            transparent 0%,
            rgba(0,0,0,0.15) 50%,
            transparent 100%
        );
    }

    :global([data-theme="light"]) .footer-back-to-top {
        background: rgba(0,212,255,0.1);
        border-color: rgba(0,212,255,0.3);
    }

    :global([data-theme="light"]) .bg-circle {
        opacity: 0.08;
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }

        .footer-brand-section {
            grid-column: span 2;
            padding-right: 0;
        }
    }

    @media (max-width: 768px) {
        .footer-container {
            padding: 6rem 1.5rem 2rem;
        }

        .footer-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
        }

        .footer-brand-section {
            grid-column: span 1;
        }

        .footer-logo {
            justify-content: center;
        }

        .footer-tagline {
            justify-content: center;
        }

        .footer-tech-stack {
            justify-content: center;
            flex-wrap: wrap;
        }

        .footer-section-title {
            justify-content: center;
        }

        .footer-nav-link,
        .footer-resource-link {
            justify-content: center;
        }

        .footer-nav-link .arrow {
            display: none;
        }

        .footer-stats-grid {
            max-width: 280px;
            margin: 0 auto;
        }

        .footer-bottom-bar {
            flex-direction: column;
            text-align: center;
        }

        .footer-back-to-top {
            margin-top: 1rem;
        }
    }

    @media (max-width: 480px) {
        .footer-logo {
            flex-direction: column;
            text-align: center;
        }

        .logo-text {
            align-items: center;
        }

        .footer-made-with {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>
