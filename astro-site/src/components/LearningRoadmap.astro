---

<section id="learning-roadmap" class="roadmap-section">
    <div class="roadmap-container">
        <!-- Header Premium -->
        <div class="roadmap-header" data-aos="fade-up">
            <div class="roadmap-header-icon">
                <i class="fas fa-route"></i>
            </div>
            <div class="roadmap-badges-row">
                <div class="roadmap-badge">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Malla 1444729-2025 | Online</span>
                </div>
                <div class="roadmap-badge engineering">
                    <i class="fas fa-award"></i>
                    <span>Ingeniería en Desarrollo de Software</span>
                </div>
            </div>
            <h2>Learning Roadmap Completo</h2>
            <p class="roadmap-subtitle">De 0 a Ingeniero de Software en 34 meses: APC (20 meses) + IDS (14 meses)</p>
            <div class="roadmap-stats-row">
                <span class="roadmap-stat">
                    <i class="fas fa-flag-checkered"></i>
                    <strong>7</strong> Fases
                </span>
                <span class="roadmap-stat">
                    <i class="fas fa-book"></i>
                    <strong>17</strong> Bimestres
                </span>
                <span class="roadmap-stat">
                    <i class="fas fa-trophy"></i>
                    <strong>42+</strong> Skills
                </span>
                <span class="roadmap-stat">
                    <i class="fas fa-medal"></i>
                    <strong>12</strong> Badges
                </span>
                <span class="roadmap-stat highlight">
                    <i class="fas fa-award"></i>
                    <strong>2</strong> Títulos
                </span>
            </div>
        </div>

        <!-- Competencias Transversales -->
        <div class="transversal-skills" data-aos="fade-up">
            <span class="transversal-label">Competencias Transversales:</span>
            <div class="transversal-grid">
                {transversalSkills.map(skill => (
                    <span class="transversal-item">
                        <i class={skill.icon}></i>
                        {skill.name}
                    </span>
                ))}
            </div>
        </div>

        <!-- Timeline -->
        <div class="roadmap-timeline">
            {roadmapPhases.map((phase, index) => (
                <div class={`roadmap-phase phase-${phase.color}`} data-aos="fade-up" data-aos-delay={100 * index}>
                    <!-- Phase Header -->
                    <div class="phase-header">
                        <div class="phase-number">{phase.phase}</div>
                        <div class="phase-icon">
                            <i class={phase.icon}></i>
                        </div>
                        <div class="phase-title-group">
                            <h3>{phase.title}</h3>
                            <p class="phase-description">{phase.description}</p>
                            <div class="phase-meta">
                                <span class="phase-period">{phase.period}</span>
                                <span class="phase-months">{phase.months}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Asignaturas -->
                    <div class="phase-subjects">
                        <span class="subjects-label"><i class="fas fa-book-open"></i> Asignaturas:</span>
                        <div class="subjects-list">
                            {phase.subjects.map(subject => (
                                <span class="subject-chip">{subject}</span>
                            ))}
                        </div>
                    </div>

                    <!-- Skills Grid -->
                    <div class="phase-skills">
                        {phase.skills.map(skill => (
                            <div class={`skill-card ${skill.level}`}>
                                <div class="skill-name">
                                    <span class={`skill-level-dot ${skill.level}`}></span>
                                    {skill.name}
                                </div>
                                <div class="skill-competency">
                                    <i class="fas fa-star"></i> {skill.competency}
                                </div>
                                <div class="skill-tools">
                                    {skill.tools.map(tool => (
                                        <span class="skill-tool">{tool}</span>
                                    ))}
                                </div>
                            </div>
                        ))}
                    </div>

                    <!-- Certificaciones sugeridas -->
                    {phase.certifications && phase.certifications.length > 0 && (
                        <div class="phase-certifications">
                            <span class="cert-label"><i class="fas fa-certificate"></i> Certificaciones sugeridas:</span>
                            <div class="cert-list">
                                {phase.certifications.map(cert => (
                                    <span class="cert-chip">{cert}</span>
                                ))}
                            </div>
                        </div>
                    )}

                    <!-- Milestone -->
                    <div class={`phase-milestone ${phase.phase === 5 ? 'final' : ''}`}>
                        <i class={phase.phase === 5 ? 'fas fa-graduation-cap' : 'fas fa-flag'}></i>
                        <span>{phase.milestone}</span>
                    </div>

                    <!-- Connection Line -->
                    {index < roadmapPhases.length - 1 && (
                        <div class="phase-connector">
                            <div class="connector-line"></div>
                            <div class="connector-arrow">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>
                    )}
                </div>
            ))}
        </div>

        <!-- Badges Section -->
        <div class="roadmap-badges glass-card" data-aos="fade-up">
            <div class="badges-header">
                <i class="fas fa-award"></i>
                <span>Badges de Logro</span>
                <span class="badges-subtitle">Desbloquea a medida que avanzas</span>
            </div>
            <div class="badges-grid">
                {badges.map((badge, index) => (
                    <div class="badge-item" data-aos="zoom-in" data-aos-delay={50 * index}>
                        <div class="badge-icon">
                            <i class={badge.icon}></i>
                        </div>
                        <div class="badge-info">
                            <span class="badge-name">{badge.name}</span>
                            <span class="badge-desc">{badge.description}</span>
                            <span class="badge-phase">Fase {badge.phase}</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Legend -->
        <div class="roadmap-legend" data-aos="fade-up">
            <span class="legend-item">
                <span class="skill-level-dot core"></span>
                Core Skills (Obligatorio)
            </span>
            <span class="legend-item">
                <span class="skill-level-dot essential"></span>
                Essential Skills (Recomendado)
            </span>
        </div>

        <!-- CTA Roadmap Completo -->
        <div class="roadmap-cta" data-aos="fade-up">
            <div class="cta-content complete">
                <i class="fas fa-check-circle"></i>
                <div class="cta-text">
                    <span class="cta-title">Roadmap Completo: 2 Carreras, 2 Títulos</span>
                    <span class="cta-desc">Analista Programador (B01-B10) → Ingeniero de Software (B11-B17)</span>
                </div>
                <a href="/Analista-Programador-Computacional-DuocUC/recursos#certifications" class="cta-link">
                    <span>Ver Certificaciones</span>
                    <i class="fas fa-award"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .roadmap-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Header */
    .roadmap-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .roadmap-header-icon {
        width: 80px;
