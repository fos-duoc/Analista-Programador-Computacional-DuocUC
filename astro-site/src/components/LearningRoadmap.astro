---
// Learning Roadmap - Progreso visual interactivo basado en malla DuocUC 2025
// Inspirado en roadmap.sh con gamificación

const roadmapPhases = [
    {
        phase: 1,
        title: "Fundamentos",
        period: "B01-B02",
        months: "Meses 1-4",
        color: "cyan",
        icon: "fas fa-seedling",
        skills: [
            { name: "Lógica de Programación", level: "core", tools: ["Pseudocódigo", "Diagramas de flujo"] },
            { name: "Python Básico", level: "core", tools: ["Variables", "Funciones", "Loops"] },
            { name: "Modelamiento de Datos", level: "core", tools: ["ER Diagrams", "Normalización"] },
            { name: "Git Básico", level: "essential", tools: ["Commits", "Branches", "GitHub"] },
            { name: "Cloud Intro", level: "essential", tools: ["IaaS", "PaaS", "SaaS"] }
        ],
        milestone: "Primer programa funcional"
    },
    {
        phase: 2,
        title: "POO & DevOps",
        period: "B03-B04",
        months: "Meses 5-8",
        color: "purple",
        icon: "fas fa-cubes",
        skills: [
            { name: "POO Completo", level: "core", tools: ["Clases", "Herencia", "Polimorfismo"] },
            { name: "Java / Python OOP", level: "core", tools: ["Encapsulamiento", "Abstracción"] },
            { name: "SQL Consultas", level: "core", tools: ["JOINs", "Subqueries", "Índices"] },
            { name: "Docker Básico", level: "essential", tools: ["Containers", "Images", "Compose"] },
            { name: "CI/CD Intro", level: "essential", tools: ["GitHub Actions", "Pipelines"] }
        ],
        milestone: "App OOP con BD"
    },
    {
        phase: 3,
        title: "Backend & SQL",
        period: "B05-B06",
        months: "Meses 9-12",
        color: "green",
        icon: "fas fa-server",
        skills: [
            { name: "APIs RESTful", level: "core", tools: ["Endpoints", "HTTP", "JSON"] },
            { name: "Spring Boot / FastAPI", level: "core", tools: ["Controllers", "Services", "Repos"] },
            { name: "SQL Avanzado", level: "core", tools: ["Stored Procedures", "Triggers", "Views"] },
            { name: "Cloud Native", level: "essential", tools: ["Kubernetes", "Microservicios"] },
            { name: "Testing", level: "essential", tools: ["Unit Tests", "Integration", "Mocking"] }
        ],
        milestone: "API REST completa"
    },
    {
        phase: 4,
        title: "Fullstack",
        period: "B07-B08",
        months: "Meses 13-16",
        color: "orange",
        icon: "fas fa-layer-group",
        skills: [
            { name: "Frontend Moderno", level: "core", tools: ["React", "Angular", "Vue"] },
            { name: "TypeScript", level: "core", tools: ["Types", "Interfaces", "Generics"] },
            { name: "Arquitectura SW", level: "core", tools: ["Clean Arch", "DDD", "Patrones"] },
            { name: "Seguridad", level: "essential", tools: ["OWASP", "Auth", "JWT"] },
            { name: "DevOps Avanzado", level: "essential", tools: ["Terraform", "Monitoring"] }
        ],
        milestone: "Fullstack App deployada"
    },
    {
        phase: 5,
        title: "Mobile & Título",
        period: "B09-B10",
        months: "Meses 17-20",
        color: "pink",
        icon: "fas fa-mobile-alt",
        skills: [
            { name: "Mobile Development", level: "core", tools: ["Android", "iOS", "Flutter/React Native"] },
            { name: "Proyecto Capstone", level: "core", tools: ["Diseño", "Desarrollo", "Deploy"] },
            { name: "App Stores", level: "essential", tools: ["Play Store", "App Store", "CI/CD Mobile"] },
            { name: "Soft Skills", level: "essential", tools: ["Scrum", "Comunicación", "Liderazgo"] }
        ],
        milestone: "TÍTULO: Analista Programador"
    }
];

const badges = [
    { icon: "fas fa-code", name: "First Commit", description: "Tu primer código en GitHub" },
    { icon: "fas fa-database", name: "Data Master", description: "Dominas SQL avanzado" },
    { icon: "fas fa-cloud", name: "Cloud Native", description: "Deploy en la nube" },
    { icon: "fas fa-mobile-alt", name: "Mobile Dev", description: "App publicada" },
    { icon: "fas fa-graduation-cap", name: "Graduate", description: "Título obtenido" }
];
---

<section id="learning-roadmap" class="roadmap-section">
    <div class="roadmap-container">
        <!-- Header -->
        <div class="roadmap-header" data-aos="fade-up">
            <div class="roadmap-header-icon">
                <i class="fas fa-route"></i>
            </div>
            <h2>Learning Roadmap 2025</h2>
            <p class="roadmap-subtitle">Tu camino de 0 a Desarrollador Profesional en 20 meses</p>
            <div class="roadmap-stats-row">
                <span class="roadmap-stat">
                    <i class="fas fa-flag-checkered"></i>
                    <strong>5</strong> Fases
                </span>
                <span class="roadmap-stat">
                    <i class="fas fa-trophy"></i>
                    <strong>25+</strong> Skills
                </span>
                <span class="roadmap-stat">
                    <i class="fas fa-medal"></i>
                    <strong>5</strong> Badges
                </span>
            </div>
        </div>

        <!-- Timeline -->
        <div class="roadmap-timeline">
            {roadmapPhases.map((phase, index) => (
                <div class={`roadmap-phase phase-${phase.color}`} data-aos="fade-up" data-aos-delay={100 * index}>
                    <!-- Phase Header -->
                    <div class="phase-header">
                        <div class="phase-number">{phase.phase}</div>
                        <div class="phase-icon">
                            <i class={phase.icon}></i>
                        </div>
                        <div class="phase-title-group">
                            <h3>{phase.title}</h3>
                            <div class="phase-meta">
                                <span class="phase-period">{phase.period}</span>
                                <span class="phase-months">{phase.months}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Skills Grid -->
                    <div class="phase-skills">
                        {phase.skills.map(skill => (
                            <div class={`skill-card ${skill.level}`}>
                                <div class="skill-name">
                                    <span class={`skill-level-dot ${skill.level}`}></span>
                                    {skill.name}
                                </div>
                                <div class="skill-tools">
                                    {skill.tools.map(tool => (
                                        <span class="skill-tool">{tool}</span>
                                    ))}
                                </div>
                            </div>
                        ))}
                    </div>

                    <!-- Milestone -->
                    <div class="phase-milestone">
                        <i class="fas fa-flag"></i>
                        <span>{phase.milestone}</span>
                    </div>

                    <!-- Connection Line -->
                    {index < roadmapPhases.length - 1 && (
                        <div class="phase-connector">
                            <div class="connector-line"></div>
                            <div class="connector-arrow">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>
                    )}
                </div>
            ))}
        </div>

        <!-- Badges Section -->
        <div class="roadmap-badges glass-card" data-aos="fade-up">
            <div class="badges-header">
                <i class="fas fa-award"></i>
                <span>Badges de Logro</span>
            </div>
            <div class="badges-grid">
                {badges.map((badge, index) => (
                    <div class="badge-item" data-aos="zoom-in" data-aos-delay={50 * index}>
                        <div class="badge-icon">
                            <i class={badge.icon}></i>
                        </div>
                        <div class="badge-info">
                            <span class="badge-name">{badge.name}</span>
                            <span class="badge-desc">{badge.description}</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Legend -->
        <div class="roadmap-legend" data-aos="fade-up">
            <span class="legend-item">
                <span class="skill-level-dot core"></span>
                Core Skills (Obligatorio)
            </span>
            <span class="legend-item">
                <span class="skill-level-dot essential"></span>
                Essential Skills (Recomendado)
            </span>
        </div>
    </div>
</section>

<style>
    .roadmap-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Header */
    .roadmap-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .roadmap-header-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(124, 58, 237, 0.2));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .roadmap-header-icon i {
        font-size: 2.5rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .roadmap-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .roadmap-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }

    .roadmap-stats-row {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .roadmap-stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #94a3b8;
        font-size: 0.9rem;
    }

    .roadmap-stat i {
        color: #00d4ff;
    }

    .roadmap-stat strong {
        color: #f8fafc;
    }

    /* Timeline */
    .roadmap-timeline {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .roadmap-phase {
        position: relative;
        padding: 2rem;
        background: rgba(18, 18, 26, 0.6);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        margin-bottom: 1rem;
    }

    .roadmap-phase:hover {
        background: rgba(18, 18, 26, 0.8);
    }

    /* Phase Colors */
    .phase-cyan { border-left: 4px solid #00d4ff; }
    .phase-purple { border-left: 4px solid #7c3aed; }
    .phase-green { border-left: 4px solid #10b981; }
    .phase-orange { border-left: 4px solid #f59e0b; }
    .phase-pink { border-left: 4px solid #ec4899; }

    .phase-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .phase-number {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(124, 58, 237, 0.2));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 800;
        color: #00d4ff;
    }

    .phase-icon {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .phase-cyan .phase-icon i { color: #00d4ff; }
    .phase-purple .phase-icon i { color: #7c3aed; }
    .phase-green .phase-icon i { color: #10b981; }
    .phase-orange .phase-icon i { color: #f59e0b; }
    .phase-pink .phase-icon i { color: #ec4899; }

    .phase-icon i {
        font-size: 1.5rem;
    }

    .phase-title-group h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 0.25rem;
    }

    .phase-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.85rem;
    }

    .phase-period {
        color: #00d4ff;
        font-weight: 600;
    }

    .phase-months {
        color: #64748b;
    }

    /* Skills Grid */
    .phase-skills {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .skill-card {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        padding: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .skill-card.core {
        border-left: 3px solid #00d4ff;
    }

    .skill-card.essential {
        border-left: 3px solid #f59e0b;
    }

    .skill-name {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #f8fafc;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .skill-level-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .skill-level-dot.core {
        background: #00d4ff;
    }

    .skill-level-dot.essential {
        background: #f59e0b;
    }

    .skill-tools {
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
    }

    .skill-tool {
        padding: 0.2rem 0.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 6px;
        font-size: 0.7rem;
        color: #64748b;
    }

    /* Milestone */
    .phase-milestone {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.15);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #10b981;
        font-weight: 600;
    }

    /* Connector */
    .phase-connector {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.5rem 0;
    }

    .connector-line {
        width: 2px;
        height: 20px;
        background: linear-gradient(180deg, rgba(0, 212, 255, 0.3), rgba(124, 58, 237, 0.3));
    }

    .connector-arrow {
        color: #7c3aed;
        animation: bounce-down 1s infinite;
    }

    @keyframes bounce-down {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(4px); }
    }

    /* Badges */
    .roadmap-badges {
        padding: 1.5rem;
        border-radius: 16px;
        margin-top: 2rem;
    }

    .badges-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1rem;
    }

    .badges-header i {
        color: #ffd700;
        font-size: 1.25rem;
    }

    .badges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
    }

    .badge-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .badge-item:hover {
        background: rgba(255, 215, 0, 0.1);
        transform: scale(1.02);
    }

    .badge-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 152, 0, 0.2));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .badge-icon i {
        color: #ffd700;
    }

    .badge-info {
        display: flex;
        flex-direction: column;
    }

    .badge-name {
        font-weight: 600;
        color: #f8fafc;
        font-size: 0.85rem;
    }

    .badge-desc {
        font-size: 0.7rem;
        color: #64748b;
    }

    /* Legend */
    .roadmap-legend {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: #94a3b8;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .roadmap-header h2 {
            font-size: 1.75rem;
        }

        .phase-skills {
            grid-template-columns: 1fr;
        }

        .roadmap-stats-row {
            gap: 1rem;
        }

        .badges-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
