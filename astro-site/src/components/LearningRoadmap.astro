        margin-bottom: 1rem;
    }

    .roadmap-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.8rem;
        background: rgba(124, 58, 237, 0.15);
        border: 1px solid rgba(124, 58, 237, 0.3);
        border-radius: 20px;
        font-size: 0.75rem;
        color: #a78bfa;
    }

    .roadmap-badge.engineering {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.15), rgba(245, 158, 11, 0.15));
        border: 1px solid rgba(251, 191, 36, 0.4);
        color: #fbbf24;
    }

    .roadmap-badge.engineering i {
        color: #fbbf24;
    }

    .roadmap-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .roadmap-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }

    .roadmap-stats-row {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .roadmap-stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #94a3b8;
        font-size: 0.9rem;
    }

    .roadmap-stat i {
        color: #00d4ff;
    }

    .roadmap-stat strong {
        color: #f8fafc;
    }

    .roadmap-stat.highlight {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.15), rgba(245, 158, 11, 0.1));
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

    .roadmap-stat.highlight i {
        color: #fbbf24;
    }

    .roadmap-stat.highlight strong {
        color: #fbbf24;
    }

    /* Competencias Transversales */
    .transversal-skills {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
        padding: 1rem;
        background: rgba(124, 58, 237, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(124, 58, 237, 0.15);
    }

    .transversal-label {
        font-size: 0.85rem;
        color: #a78bfa;
        font-weight: 600;
    }

    .transversal-grid {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .transversal-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.3rem 0.6rem;
        background: rgba(124, 58, 237, 0.1);
        border-radius: 6px;
        font-size: 0.75rem;
        color: #c4b5fd;
