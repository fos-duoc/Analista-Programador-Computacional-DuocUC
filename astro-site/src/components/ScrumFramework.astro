---
// Agile Scrum Framework Component - Premium design with events, roles, and artifacts
---

<div class="scrum-premium-container glass-card">
    <!-- Premium Header -->
    <div class="scrum-hero-header">
        <div class="scrum-title-wrap">
            <div class="scrum-icon-glow">
                <i class="fas fa-sync-alt"></i>
            </div>
            <div class="scrum-title-content">
                <h3 class="scrum-main-title">Agile <span class="gradient-text">Scrum</span> Framework</h3>
                <p class="scrum-tagline">Metodología iterativa e incremental para equipos de alto rendimiento</p>
            </div>
        </div>
        <div class="scrum-metrics-premium">
            <span class="metric-pill"><i class="fas fa-users"></i> Team 3-9</span>
            <span class="metric-pill"><i class="fas fa-calendar-week"></i> Sprint 2-4 Weeks</span>
            <span class="metric-pill"><i class="fas fa-chart-line"></i> Velocity++</span>
        </div>
    </div>

    <!-- Sprint Cycle Visual -->
    <div class="scrum-sprint-visual">
        <div class="sprint-center">
            <div class="sprint-icon-premium">
                <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExcHZ5MnRhbXRmMGNhbHRtaGIycXBrNjhiY2xoNnNtdXB0Z3l3OWJxbyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/3oKIPtjElfqwMOTbH2/giphy.gif" width="60" alt="Sprint"/>
            </div>
            <span class="sprint-label-premium">SPRINT</span>
            <small class="sprint-duration">2-4 Weeks · Increment</small>
        </div>

        <!-- Connection Line -->
        <div class="scrum-connection-line">
            <div class="scrum-flow-animation"></div>
        </div>

        <!-- Events Grid -->
        <div class="scrum-events-premium">
            <div class="event-card-premium plan">
                <div class="event-number">01</div>
                <div class="event-icon-wrap">
                    <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOGJtcWJ5cWJhMnNrZ2xxbDdtZnVqcTF2NWZjMnJrZnc5NmJqaHVsNSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/xT9IgzoKnwFNmISR8I/giphy.gif" width="35" alt="Planning"/>
                </div>
                <div class="event-content">
                    <h4>Planning</h4>
                    <p>Sprint Goal Definition</p>
                </div>
                <div class="event-meta">
                    <span><i class="fas fa-clock"></i> 4-8 hrs</span>
                </div>
            </div>
            <div class="event-arrow"><i class="fas fa-arrow-right"></i></div>

            <div class="event-card-premium daily">
                <div class="event-number">02</div>
                <div class="event-icon-wrap">
                    <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNzN1OWJkd2hyYmN5Y3BhcjZ3cWJhNnA5aWlxdnU4ZWlqY3BmNTg5eSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/l0HlNQ03J5JxX6lva/giphy.gif" width="35" alt="Daily"/>
                </div>
                <div class="event-content">
                    <h4>Daily Scrum</h4>
                    <p>Stand-up Meeting</p>
                </div>
                <div class="event-meta">
                    <span><i class="fas fa-clock"></i> 15 min</span>
                </div>
            </div>
            <div class="event-arrow"><i class="fas fa-arrow-right"></i></div>

            <div class="event-card-premium review">
                <div class="event-number">03</div>
                <div class="event-icon-wrap">
                    <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExYjJwZnUwcWVqMDJiMHVqb2Y3N3J5bWRxY2lsaXRuNjhicjFxdXFoYyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/3o7btNhMBytxAM6YBa/giphy.gif" width="35" alt="Review"/>
                </div>
                <div class="event-content">
                    <h4>Review</h4>
                    <p>Demo to Stakeholders</p>
                </div>
                <div class="event-meta">
                    <span><i class="fas fa-clock"></i> 2-4 hrs</span>
                </div>
            </div>
            <div class="event-arrow"><i class="fas fa-arrow-right"></i></div>

            <div class="event-card-premium retro">
                <div class="event-number">04</div>
                <div class="event-icon-wrap">
                    <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExZm1pbGhlZjBmMjFucWtiMTg3Z2h5OG1ndHY4cmVrcHlrNXNlZDJ0YiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/WtOoH3YCgNPmE6uvUk/giphy.gif" width="35" alt="Retro"/>
                </div>
                <div class="event-content">
                    <h4>Retrospective</h4>
                    <p>Continuous Improvement</p>
                </div>
                <div class="event-meta">
                    <span><i class="fas fa-clock"></i> 1.5-3 hrs</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Scrum Team & Artifacts -->
    <div class="scrum-bottom-layers">
        <div class="scrum-layer roles-layer">
            <div class="layer-label"><i class="fas fa-users-cog"></i> SCRUM TEAM</div>
            <div class="roles-grid">
                <div class="role-card po">
                    <i class="fas fa-user-tie"></i>
                    <span>Product Owner</span>
                    <small>Backlog Priority</small>
                </div>
                <div class="role-card sm">
                    <i class="fas fa-user-shield"></i>
                    <span>Scrum Master</span>
                    <small>Process Facilitator</small>
                </div>
                <div class="role-card dev">
                    <i class="fas fa-code"></i>
                    <span>Dev Team</span>
                    <small>3-9 Members</small>
                </div>
            </div>
        </div>

        <div class="scrum-layer artifacts-layer">
            <div class="layer-label"><i class="fas fa-scroll"></i> ARTIFACTS</div>
            <div class="artifacts-grid">
                <span class="artifact-chip"><i class="fas fa-list-ol"></i> Product Backlog</span>
                <span class="artifact-chip"><i class="fas fa-tasks"></i> Sprint Backlog</span>
                <span class="artifact-chip"><i class="fas fa-box"></i> Increment</span>
                <span class="artifact-chip"><i class="fas fa-flag-checkered"></i> Definition of Done</span>
            </div>
        </div>

        <div class="scrum-layer values-layer">
            <div class="layer-label"><i class="fas fa-gem"></i> SCRUM VALUES</div>
            <div class="values-grid">
                <span class="value-badge"><i class="fas fa-heart"></i> Commitment</span>
                <span class="value-badge"><i class="fas fa-mountain"></i> Courage</span>
                <span class="value-badge"><i class="fas fa-bullseye"></i> Focus</span>
                <span class="value-badge"><i class="fas fa-door-open"></i> Openness</span>
                <span class="value-badge"><i class="fas fa-handshake"></i> Respect</span>
            </div>
        </div>
    </div>
</div>
