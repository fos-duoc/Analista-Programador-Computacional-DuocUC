</style>

<script>
    // Decision Guides Interactive Logic
    document.addEventListener('astro:page-load', initDecisionGuides);
    document.addEventListener('DOMContentLoaded', initDecisionGuides);

    let dgInitialized = false;

    function initDecisionGuides() {
        if (dgInitialized) return;

        const section = document.querySelector('.decision-guides-section');
        if (!section) return;

        dgInitialized = true;

        // Tab switching
        const tabs = section.querySelectorAll('.dg-selector-btn');
        const panels = section.querySelectorAll('.dg-panel');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const guideId = tab.dataset.guideId;

                tabs.forEach(t => {
                    t.classList.remove('active');
                    t.setAttribute('aria-selected', 'false');
                });
                tab.classList.add('active');
                tab.setAttribute('aria-selected', 'true');

                panels.forEach(panel => {
                    panel.classList.remove('active');
                    if (panel.dataset.guide === guideId) {
                        panel.classList.add('active');
                    }
                });
            });
        });

        // Initialize wizards
        const wizards = section.querySelectorAll('[data-guide-wizard]');
        wizards.forEach(wizard => initWizard(wizard));
    }

    function initWizard(wizard: Element) {
        const questions = wizard.querySelectorAll('.dg-question');
        const recommendations = wizard.querySelector('.dg-recommendations');
        const progressBar = wizard.querySelector('.dg-progress-bar') as HTMLElement;
        const progressText = wizard.querySelector('.dg-progress-text');
        const totalQuestions = questions.length;

        let currentQuestionIndex = 0;
        const answers: Record<string, string> = {};

        // Option click handler
        wizard.querySelectorAll('.dg-option').forEach(option => {
            option.addEventListener('click', (e) => {
                const btn = e.currentTarget as HTMLElement;
                const questionDiv = btn.closest('.dg-question') as HTMLElement;
                const questionId = questionDiv.dataset.questionId!;
                const value = btn.dataset.value!;
                const leadsTo = btn.dataset.leadsTo!;

                // Update aria-checked
                questionDiv.querySelectorAll('.dg-option').forEach(opt => {
                    opt.setAttribute('aria-checked', 'false');
                });
                btn.setAttribute('aria-checked', 'true');

                // Store answer
                answers[questionId] = value;

                // Delay before transition
                setTimeout(() => {
                    // Check if leads to recommendation
                    if (leadsTo.startsWith('rec-')) {
                        showRecommendation(leadsTo);
                    } else {
                        // Find next question
                        const nextQuestion = wizard.querySelector(`[data-question-id="${leadsTo}"]`) as HTMLElement;
                        if (nextQuestion) {
                            const nextIndex = parseInt(nextQuestion.dataset.questionIndex || '0');
                            goToQuestion(nextIndex);
                        }
                    }
                }, 300);
            });

            // Keyboard navigation
            option.addEventListener('keydown', (e) => {
                const keyEvent = e as KeyboardEvent;
                if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
                    keyEvent.preventDefault();
                    (option as HTMLElement).click();
                }
            });
        });

        function goToQuestion(index: number) {
            questions.forEach((q, i) => {
                q.classList.toggle('active', i === index);
            });
            currentQuestionIndex = index;
            updateProgress();
        }

        function showRecommendation(recId: string) {
            // Hide questions
            questions.forEach(q => q.classList.remove('active'));

            // Show recommendations container
            if (recommendations) {
                recommendations.classList.add('active');

                // Show specific recommendation
                const recs = recommendations.querySelectorAll('.dg-recommendation');
                recs.forEach(rec => {
                    const el = rec as HTMLElement;
                    el.classList.toggle('active', el.dataset.recommendationId === recId);
                });
            }

            // Update progress to 100%
            if (progressBar) progressBar.style.setProperty('--progress', '100%');
            if (progressText) progressText.textContent = '¡Completado!';
        }

        function updateProgress() {
            const progress = ((currentQuestionIndex + 1) / totalQuestions) * 100;
            if (progressBar) progressBar.style.setProperty('--progress', `${progress}%`);
            if (progressText) progressText.textContent = `Paso ${currentQuestionIndex + 1} de ${totalQuestions}`;
        }

        // Restart button
        wizard.querySelectorAll('.dg-restart-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                // Reset state
                currentQuestionIndex = 0;

                // Hide recommendations
                if (recommendations) {
                    recommendations.classList.remove('active');
                    recommendations.querySelectorAll('.dg-recommendation').forEach(r => r.classList.remove('active'));
                }

                // Reset all options
                wizard.querySelectorAll('.dg-option').forEach(opt => {
                    opt.setAttribute('aria-checked', 'false');
                });

                // Show first question
                goToQuestion(0);
            });
        });

        // Initial progress
        updateProgress();
    }

    // Re-init on view transitions
    document.addEventListener('astro:after-swap', () => {
        dgInitialized = false;
        initDecisionGuides();
    });
</script>
