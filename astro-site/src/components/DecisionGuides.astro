---
/**
 * Decision Guides Component
 * Interactive decision tree for technology selection
 *
 * Based on:
 * - AWS Well-Architected Framework Decision Guides
 * - Google Cloud Architecture Decision Trees
 * - Martin Fowler's Architecture Patterns
 *
 * Accessibility: WCAG 2.2 AA compliant
 * Progressive Enhancement: Works without JavaScript (shows all options)
 */

// Import decision guides data
import databaseGuide from '../content/decision-guides/database-selection.json';
import architectureGuide from '../content/decision-guides/architecture-selection.json';

const guides = [databaseGuide, architectureGuide];
---

<section id="decision-guides" class="decision-guides-section" aria-labelledby="dg-title">
    <div class="dg-container">
        <!-- Header -->
        <header class="dg-header" data-aos="fade-up">
            <div class="dg-header-icon" aria-hidden="true">
                <i class="fas fa-route"></i>
            </div>
            <div class="dg-badges">
                <span class="dg-badge">
                    <i class="fab fa-aws" aria-hidden="true"></i>
                    AWS Well-Architected
                </span>
                <span class="dg-badge">
                    <i class="fab fa-google" aria-hidden="true"></i>
                    Google Cloud
                </span>
                <span class="dg-badge">
                    <i class="fas fa-book" aria-hidden="true"></i>
                    Martin Fowler
                </span>
            </div>
            <h2 id="dg-title">Decision Guides</h2>
            <p class="dg-subtitle">Guías interactivas para elegir la tecnología correcta según tu caso de uso</p>
        </header>

        <!-- Guide Selector -->
        <nav class="dg-selector" role="tablist" aria-label="Seleccionar guía de decisión">
            {guides.map((guide, index) => (
                <button
                    class={`dg-selector-btn ${index === 0 ? 'active' : ''}`}
                    role="tab"
                    aria-selected={index === 0 ? 'true' : 'false'}
                    aria-controls={`guide-panel-${guide.id}`}
                    data-guide-id={guide.id}
                    id={`tab-${guide.id}`}
                >
                    <i class={guide.icon} aria-hidden="true"></i>
                    <span class="btn-text">{guide.title}</span>
                </button>
            ))}
        </nav>

        <!-- Guide Panels -->
        <div class="dg-panels">
            {guides.map((guide, index) => (
                <article
                    id={`guide-panel-${guide.id}`}
                    class={`dg-panel ${index === 0 ? 'active' : ''}`}
                    role="tabpanel"
                    aria-labelledby={`tab-${guide.id}`}
                    data-guide={guide.id}
                >
                    <!-- Guide Description -->
                    <div class="dg-description glass-card">
                        <p>{guide.description}</p>
                    </div>

                    <!-- Interactive Decision Tree -->
                    <div class="dg-wizard" data-guide-wizard={guide.id}>
                        <!-- Progress Indicator -->
                        <div class="dg-progress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            <div class="dg-progress-bar"></div>
                            <span class="dg-progress-text">Paso 1 de {guide.questions.length}</span>
                        </div>

                        <!-- Questions Container -->
                        <div class="dg-questions">
                            {guide.questions.map((q, qIndex) => (
                                <div
                                    class={`dg-question ${qIndex === 0 ? 'active' : ''}`}
                                    data-question-id={q.id}
                                    data-question-index={qIndex}
                                >
                                    <h3 class="dg-question-text">
                                        <span class="dg-question-number">{qIndex + 1}</span>
                                        {q.question}
                                    </h3>
                                    <div class="dg-options" role="radiogroup" aria-label={q.question}>
                                        {q.options.map((opt, optIndex) => (
                                            <button
                                                class="dg-option"
                                                role="radio"
                                                aria-checked="false"
                                                data-value={opt.value}
                                                data-leads-to={opt.leadsTo}
                                                tabindex={optIndex === 0 ? '0' : '-1'}
                                            >
                                                <span class="dg-option-indicator" aria-hidden="true">
                                                    <i class="fas fa-circle"></i>
                                                </span>
                                                <span class="dg-option-text">{opt.label}</span>
                                                <span class="dg-option-arrow" aria-hidden="true">
                                                    <i class="fas fa-chevron-right"></i>
                                                </span>
                                            </button>
                                        ))}
                                    </div>
                                </div>
                            ))}
                        </div>

                        <!-- Recommendations Container -->
                        <div class="dg-recommendations">
                            {guide.recommendations.map(rec => (
                                <article
                                    class="dg-recommendation glass-card"
                                    data-recommendation-id={rec.id}
                                    aria-labelledby={`rec-title-${rec.id}`}
                                >
                                    <header class="dg-rec-header">
                                        <div class="dg-rec-badge">
                                            <i class="fas fa-check-circle" aria-hidden="true"></i>
                                            <span>Recomendación</span>
                                        </div>
                                        <h3 id={`rec-title-${rec.id}`} class="dg-rec-title">{rec.technology}</h3>
                                        <p class="dg-rec-desc">{rec.description}</p>
                                    </header>

                                    <div class="dg-rec-content">
                                        <div class="dg-rec-column">
                                            <h4><i class="fas fa-thumbs-up" aria-hidden="true"></i> Ventajas</h4>
                                            <ul class="dg-rec-list pros">
                                                {rec.pros.map(pro => (
                                                    <li><i class="fas fa-check" aria-hidden="true"></i> {pro}</li>
                                                ))}
                                            </ul>
                                        </div>

                                        <div class="dg-rec-column">
                                            <h4><i class="fas fa-exclamation-triangle" aria-hidden="true"></i> Consideraciones</h4>
                                            <ul class="dg-rec-list cons">
                                                {rec.cons.map(con => (
                                                    <li><i class="fas fa-minus" aria-hidden="true"></i> {con}</li>
                                                ))}
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="dg-rec-usecases">
                                        <h4><i class="fas fa-bullseye" aria-hidden="true"></i> Ideal para</h4>
                                        <div class="dg-usecase-tags">
                                            {rec.bestFor.map(useCase => (
                                                <span class="dg-usecase-tag">{useCase}</span>
                                            ))}
                                        </div>
                                    </div>

                                    {rec.resources && rec.resources.length > 0 && (
                                        <footer class="dg-rec-resources">
                                            <h4><i class="fas fa-external-link-alt" aria-hidden="true"></i> Recursos</h4>
                                            <div class="dg-resource-links">
                                                {rec.resources.map(resource => (
                                                    <a
                                                        href={resource.url}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        class={`dg-resource-link ${resource.type}`}
                                                    >
                                                        <i class={
                                                            resource.type === 'docs' ? 'fas fa-book' :
                                                            resource.type === 'tutorial' ? 'fas fa-graduation-cap' :
                                                            resource.type === 'video' ? 'fas fa-play-circle' :
                                                            'fas fa-certificate'
                                                        } aria-hidden="true"></i>
                                                        <span>{resource.title}</span>
                                                        <i class="fas fa-external-link-alt" aria-hidden="true"></i>
                                                    </a>
                                                ))}
                                            </div>
                                        </footer>
                                    )}

                                    <div class="dg-rec-actions">
                                        <button class="dg-restart-btn" aria-label="Reiniciar guía">
                                            <i class="fas fa-redo" aria-hidden="true"></i>
                                            <span>Volver a empezar</span>
                                        </button>
                                    </div>
                                </article>
                            ))}
                        </div>
                    </div>

                    <!-- Fallback: All Options (Progressive Enhancement) -->
                    <noscript>
                        <div class="dg-fallback">
                            <h3>Todas las opciones disponibles:</h3>
                            {guide.recommendations.map(rec => (
                                <div class="dg-fallback-card">
                                    <h4>{rec.technology}</h4>
                                    <p>{rec.description}</p>
                                    <p><strong>Ideal para:</strong> {rec.bestFor.join(', ')}</p>
                                </div>
                            ))}
                        </div>
                    </noscript>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
    .decision-guides-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .dg-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    /* Header */
    .dg-header {
        text-align: center;
    }

    .dg-header-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.15), rgba(124, 58, 237, 0.15));
        border: 1px solid rgba(0, 212, 255, 0.3);
    }

    .dg-header-icon i {
        font-size: 2rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dg-badges {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }

    .dg-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.8rem;
        background: rgba(124, 58, 237, 0.15);
        border: 1px solid rgba(124, 58, 237, 0.3);
        border-radius: 20px;
        font-size: 0.75rem;
        color: #a78bfa;
    }

    .dg-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dg-subtitle {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Guide Selector */
    .dg-selector {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .dg-selector-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #94a3b8;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
        font-weight: 600;
    }

    .dg-selector-btn:hover {
        background: rgba(30, 41, 59, 0.95);
        border-color: rgba(0, 212, 255, 0.3);
        color: #f8fafc;
    }

    .dg-selector-btn.active {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(124, 58, 237, 0.2));
        border-color: rgba(0, 212, 255, 0.5);
        color: #00d4ff;
    }

    .dg-selector-btn i {
        font-size: 1.25rem;
    }

    /* Panels */
    .dg-panel {
        display: none;
    }

    .dg-panel.active {
        display: block;
        animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .dg-description {
        padding: 1.5rem;
        margin-bottom: 2rem;
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
    }

    .dg-description p {
        color: #cbd5e1;
        line-height: 1.6;
        margin: 0;
    }

    /* Progress */
    .dg-progress {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        padding: 1rem;
        background: rgba(30, 41, 59, 0.4);
        border-radius: 8px;
    }

    .dg-progress-bar {
        flex: 1;
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
        overflow: hidden;
        position: relative;
    }

    .dg-progress-bar::after {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: var(--progress, 0%);
        background: linear-gradient(90deg, #00d4ff, #7c3aed);
        border-radius: 3px;
        transition: width 0.3s ease;
    }

    .dg-progress-text {
        color: #94a3b8;
        font-size: 0.85rem;
        white-space: nowrap;
    }

    /* Questions */
    .dg-questions {
        position: relative;
    }

    .dg-question {
        display: none;
    }

    .dg-question.active {
        display: block;
        animation: slideIn 0.4s ease;
    }

    @keyframes slideIn {
        from { opacity: 0; transform: translateX(20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .dg-question-text {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        font-size: 1.35rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1.5rem;
        line-height: 1.4;
    }

    .dg-question-number {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        border-radius: 50%;
        font-size: 1rem;
        color: white;
    }

    /* Options */
    .dg-options {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .dg-option {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
        background: rgba(30, 41, 59, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: left;
        width: 100%;
        color: #cbd5e1;
        font-size: 1rem;
    }

    .dg-option:hover {
        background: rgba(30, 41, 59, 0.9);
        border-color: rgba(0, 212, 255, 0.4);
        transform: translateX(4px);
    }

    .dg-option:focus {
        outline: none;
        border-color: #00d4ff;
        box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
    }

    .dg-option[aria-checked="true"] {
        background: rgba(0, 212, 255, 0.15);
        border-color: #00d4ff;
        color: #f8fafc;
    }

    .dg-option-indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        border: 2px solid currentColor;
        border-radius: 50%;
        color: #64748b;
        transition: all 0.3s ease;
    }

    .dg-option-indicator i {
        font-size: 0.5rem;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .dg-option[aria-checked="true"] .dg-option-indicator {
        border-color: #00d4ff;
        background: #00d4ff;
        color: white;
    }

    .dg-option[aria-checked="true"] .dg-option-indicator i {
        opacity: 1;
    }

    .dg-option-text {
        flex: 1;
    }

    .dg-option-arrow {
        color: #64748b;
        transition: all 0.3s ease;
    }

    .dg-option:hover .dg-option-arrow {
        color: #00d4ff;
        transform: translateX(4px);
    }

    /* Recommendations */
    .dg-recommendations {
        display: none;
    }

    .dg-recommendations.active {
        display: block;
    }

    .dg-recommendation {
        display: none;
        padding: 2rem;
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(0, 212, 255, 0.3);
        border-radius: 16px;
        animation: fadeIn 0.5s ease;
    }

    .dg-recommendation.active {
        display: block;
    }

    .dg-rec-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dg-rec-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(6, 182, 212, 0.2));
        border: 1px solid rgba(16, 185, 129, 0.4);
        border-radius: 20px;
        color: #10b981;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .dg-rec-title {
        font-size: 2rem;
        font-weight: 800;
        color: #f8fafc;
        margin-bottom: 0.75rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dg-rec-desc {
        color: #94a3b8;
        font-size: 1.1rem;
        line-height: 1.6;
        max-width: 700px;
        margin: 0 auto;
    }

    .dg-rec-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .dg-rec-column h4 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1rem;
    }

    .dg-rec-column h4 i {
        font-size: 0.9rem;
    }

    .dg-rec-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .dg-rec-list li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.5rem 0;
        color: #cbd5e1;
        font-size: 0.95rem;
    }

    .dg-rec-list.pros li i {
        color: #10b981;
        margin-top: 0.2rem;
    }

    .dg-rec-list.cons li i {
        color: #f59e0b;
        margin-top: 0.2rem;
    }

    .dg-rec-usecases {
        margin-bottom: 1.5rem;
    }

    .dg-rec-usecases h4 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1rem;
    }

    .dg-usecase-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .dg-usecase-tag {
        padding: 0.4rem 0.8rem;
        background: rgba(124, 58, 237, 0.15);
        border: 1px solid rgba(124, 58, 237, 0.3);
        border-radius: 20px;
        color: #a78bfa;
        font-size: 0.85rem;
    }

    .dg-rec-resources {
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dg-rec-resources h4 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1rem;
    }

    .dg-resource-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .dg-resource-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1rem;
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: #cbd5e1;
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .dg-resource-link:hover {
        background: rgba(0, 212, 255, 0.1);
        border-color: rgba(0, 212, 255, 0.3);
        color: #00d4ff;
    }

    .dg-resource-link.docs i:first-child { color: #3b82f6; }
    .dg-resource-link.tutorial i:first-child { color: #10b981; }
    .dg-resource-link.video i:first-child { color: #ef4444; }
    .dg-resource-link.course i:first-child { color: #f59e0b; }

    .dg-rec-actions {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .dg-restart-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: transparent;
        border: 2px solid rgba(124, 58, 237, 0.5);
        border-radius: 8px;
        color: #a78bfa;
        cursor: pointer;
        font-size: 0.95rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .dg-restart-btn:hover {
        background: rgba(124, 58, 237, 0.15);
        border-color: #7c3aed;
        color: #c4b5fd;
    }

    /* Fallback for no-JS */
    .dg-fallback {
        padding: 2rem;
    }

    .dg-fallback-card {
        padding: 1.5rem;
        margin-bottom: 1rem;
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
    }

    /* Light Mode */
    :global([data-theme="light"]) .dg-header h2 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .dg-subtitle {
        color: #64748b;
    }

    :global([data-theme="light"]) .dg-badge {
        background: rgba(124, 58, 237, 0.1);
        color: #7c3aed;
    }

    :global([data-theme="light"]) .dg-selector-btn {
        background: rgba(248, 250, 252, 0.9);
        border-color: rgba(0, 0, 0, 0.1);
        color: #475569;
    }

    :global([data-theme="light"]) .dg-selector-btn:hover,
    :global([data-theme="light"]) .dg-selector-btn.active {
        background: white;
        color: #0891b2;
    }

    :global([data-theme="light"]) .dg-description {
        background: rgba(248, 250, 252, 0.9);
        border-color: rgba(0, 0, 0, 0.1);
    }

    :global([data-theme="light"]) .dg-description p {
        color: #475569;
    }

    :global([data-theme="light"]) .dg-progress {
        background: rgba(248, 250, 252, 0.9);
    }

    :global([data-theme="light"]) .dg-question-text {
        color: #1e293b;
    }

    :global([data-theme="light"]) .dg-option {
        background: rgba(248, 250, 252, 0.9);
        border-color: rgba(0, 0, 0, 0.1);
        color: #475569;
    }

    :global([data-theme="light"]) .dg-option:hover {
        background: white;
        border-color: #0891b2;
    }

    :global([data-theme="light"]) .dg-recommendation {
        background: rgba(248, 250, 252, 0.95);
        border-color: rgba(8, 145, 178, 0.3);
    }

    :global([data-theme="light"]) .dg-rec-desc {
        color: #64748b;
    }

    :global([data-theme="light"]) .dg-rec-column h4,
    :global([data-theme="light"]) .dg-rec-usecases h4,
    :global([data-theme="light"]) .dg-rec-resources h4 {
        color: #1e293b;
    }

    :global([data-theme="light"]) .dg-rec-list li {
        color: #475569;
    }

    :global([data-theme="light"]) .dg-usecase-tag {
        background: rgba(124, 58, 237, 0.08);
        color: #7c3aed;
    }

    :global([data-theme="light"]) .dg-resource-link {
        background: rgba(248, 250, 252, 0.9);
        color: #475569;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .decision-guides-section {
            padding: 2rem 1rem;
        }

        .dg-header h2 {
            font-size: 1.75rem;
        }

        .dg-selector {
            flex-direction: column;
        }

        .dg-selector-btn {
            width: 100%;
            justify-content: center;
        }

        .dg-question-text {
            font-size: 1.15rem;
        }

        .dg-option {
            padding: 1rem;
        }

        .dg-rec-content {
            grid-template-columns: 1fr;
        }

        .dg-rec-title {
            font-size: 1.5rem;
        }
