                        <i class="fab fa-github"></i>
                        <span>Octoverse</span>
                    </button>
                    <button class="source-tab" data-source="tiobe" title="TIOBE Index December 2024">
                        <i class="fas fa-chart-line"></i>
                        <span>TIOBE</span>
                    </button>
                </div>
            </div>

            <!-- Visual Podium Grid -->
            <div class="podium-visual">
                {topLanguages.map((lang, idx) => {
                    const meta = techMetadata[lang.name];
                    const tooltipData = meta ?
                        `${lang.name}|${meta.objective}|${meta.features?.join(', ') || ''}|tool|fas fa-trophy|${meta.creator} (${meta.year})` :
                        `${lang.name}|${lang.desc}||tool|fas fa-code|`;
                    return (
                    <a href={lang.url} target="_blank" rel="noopener"
                       class={`podium-card-v2 medal-${lang.medal}`}
                       data-source="stackoverflow"
                       data-premium-tooltip={tooltipData}
