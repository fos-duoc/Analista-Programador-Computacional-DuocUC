function initTechStack() {
    // Source Selector Tabs
    const sourceTabs = document.querySelectorAll('.source-tab');
    const sourceLinks = document.querySelectorAll('.source-link');

    sourceTabs.forEach(tab => {
        tab.onclick = () => {
            const source = tab.dataset.source;

            // Update active tab
            sourceTabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            // Update source links
            sourceLinks.forEach(link => {
                link.classList.toggle('active', link.dataset.for === source);
            });

            // Update podium cards
            updatePodiumData(source);
        };
    });

    // Category Filters
    const filterBtns = document.querySelectorAll('.filter-btn');
    const categoryCards = document.querySelectorAll('.category-card');

    filterBtns.forEach(btn => {
        btn.onclick = () => {
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const filter = btn.dataset.filter;
            categoryCards.forEach(card => {
                if (filter === 'all' || card.dataset.category === filter) {
                    card.style.display = 'block';
                    card.style.animation = 'fadeIn 0.3s ease';
                } else {
                    card.style.display = 'none';
                }
            });
        };
    });

    // Search Functionality
    const searchInput = document.getElementById('tech-search');
    if (searchInput) {
        searchInput.oninput = (e) => {
            const query = e.target.value.toLowerCase();
            const techItems = document.querySelectorAll('.tech-item, .lang-chip-v2, .podium-card-v2');

            techItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                if (query === '' || text.includes(query)) {
                    item.style.opacity = '1';
                    item.style.transform = 'scale(1)';
                } else {
                    item.style.opacity = '0.3';
                    item.style.transform = 'scale(0.95)';
                }
            });
        };

        // Keyboard shortcut
        document.addEventListener('keydown', (e) => {
            if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
                e.preventDefault();
                searchInput.focus();
            }
            if (e.key === 'Escape') {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
                searchInput.blur();
            }
        });
    }

    // Tooltips
    initTooltips();
}

function updatePodiumData(source) {
    const data = langData[source];
    if (!data) return;

    const podiumGrid = document.querySelector('.podium-visual');
    const secondaryGrid = document.querySelector('.secondary-grid');

    // Helper function to build premium tooltip string
    function buildTooltip(name, desc) {
        const meta = techMeta[name];
        if (meta) {
            return `${name}|${meta.objective}|${meta.features?.join(', ') || ''}|tool|fas fa-trophy|${meta.creator} (${meta.year})`;
        }
        return `${name}|${desc}||tool|fas fa-code|`;
    }

    if (podiumGrid) {
        // Clear and rebuild podium
        podiumGrid.innerHTML = data.top.map((lang, idx) => `
            <a href="${lang.url}" target="_blank" rel="noopener"
               class="podium-card-v2 medal-${lang.medal}"
               data-source="${source}"
               data-premium-tooltip="${buildTooltip(lang.name, lang.desc)}"
               style="order: ${idx === 0 ? 2 : idx === 1 ? 1 : 3}">
                <div class="medal-icon">
                    ${lang.medal === 'gold' ? '<span class="medal gold">🥇</span>' : ''}
                    ${lang.medal === 'silver' ? '<span class="medal silver">🥈</span>' : ''}
                    ${lang.medal === 'bronze' ? '<span class="medal bronze">🥉</span>' : ''}
                </div>
                <div class="lang-avatar-v2">
                    ${lang.icon.startsWith('devicon') ?
                        `<i class="${lang.icon}"></i>` :
                        `<img src="${lang.icon}" alt="${lang.name}" loading="lazy" />`
                    }
                </div>
                <div class="lang-info-v2">
                    <span class="lang-name-v2">${lang.name}</span>
                    <span class="lang-stat-v2">${lang.stat}</span>
                </div>
                <div class="trend-badge trend-${lang.trend}">
                    ${lang.trend === 'hot' ? '<i class="fas fa-fire"></i> ' + lang.trendLabel : ''}
                    ${lang.trend === 'up' ? '<i class="fas fa-arrow-up"></i> ' + lang.trendLabel : ''}
                    ${lang.trend === 'stable' ? '<i class="fas fa-minus"></i> ' + lang.trendLabel : ''}
                    ${lang.trend === 'down' ? '<i class="fas fa-arrow-down"></i> ' + lang.trendLabel : ''}
                    <span class="trend-value">${lang.trendValue}</span>
                </div>
                <div class="jobs-badge">
                    <i class="fas fa-briefcase"></i> ${lang.jobs} empleos
                </div>
                <div class="progress-bar-v2">
                    <div class="progress-fill-v2" style="width: ${lang.barWidth}"></div>
                </div>
            </a>
        `).join('');
    }

    if (secondaryGrid) {
        // Clear and rebuild secondary
        secondaryGrid.innerHTML = data.secondary.map(lang => `
            <a href="${lang.url}" target="_blank" rel="noopener"
               class="lang-chip-v2"
               data-source="${source}"
               data-premium-tooltip="${buildTooltip(lang.name, lang.desc)}">
                ${lang.icon.startsWith('devicon') ?
                    `<i class="${lang.icon}"></i>` :
                    `<img src="${lang.icon}" alt="${lang.name}" width="20" loading="lazy" />`
                }
                <span class="chip-name-v2">${lang.name}</span>
                <span class="chip-stat-v2">${lang.stat}</span>
                <span class="chip-trend-v2 trend-${lang.trend}">
                    ${lang.trend === 'hot' ? '🔥' : lang.trend === 'up' ? '↑' : lang.trend === 'stable' ? '→' : '↓'}${lang.trendValue}
                </span>
            </a>
        `).join('');
    }

    // Re-init premium tooltips
    if (typeof initPremiumTooltips === 'function') {
        initPremiumTooltips();
    }
}

function initTooltips() {
    document.querySelectorAll('[data-tooltip]').forEach(el => {
        el.onmouseenter = (e) => {
            const tooltip = document.createElement('div');
            tooltip.className = 'custom-tooltip';
            tooltip.textContent = el.dataset.tooltip;
            document.body.appendChild(tooltip);

            const rect = el.getBoundingClientRect();
            tooltip.style.left = rect.left + (rect.width / 2) - (tooltip.offsetWidth / 2) + 'px';
            tooltip.style.top = rect.top - tooltip.offsetHeight - 8 + 'px';

            el._tooltip = tooltip;
        };
        el.onmouseleave = () => {
            if (el._tooltip) {
                el._tooltip.remove();
                el._tooltip = null;
            }
        };
    });
}
