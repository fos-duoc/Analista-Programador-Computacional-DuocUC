<section id="languages-2025" class="languages-section">
    <!-- Premium Header -->
    <div class="tech-hero-header" data-aos="fade-up">
        <div class="tech-title-wrap">
            <div class="tech-icon-glow">
                <i class="fas fa-layer-group"></i>
            </div>
            <div class="tech-title-content">
                <h2 class="tech-main-title">Stack Tecnológico <span class="gradient-text">2025</span></h2>
                <p class="tech-tagline">70+ tecnologías que dominan la industria</p>
            </div>
        </div>
        <div class="tech-sources">
            <span class="source-chip so"><i class="fab fa-stack-overflow"></i> SO Survey</span>
            <span class="source-chip gh"><i class="fab fa-github"></i> Octoverse</span>
        </div>
    </div>

    <!-- Compact Dashboard -->
    <div class="lang-dashboard glass-card compact-dashboard" data-aos="fade-up" data-aos-delay="100">
        <!-- Languages Grid with Animated Icons -->
        <div class="lang-showcase">
            <!-- Row 1: Top 3 -->
            <div class="lang-podium">
                {topLanguages.map(lang => (
                    <a href={lang.url} target="_blank" rel="noopener" class={`lang-item ${lang.class}`}>
                        <div class="lang-rank">#{lang.rank}</div>
                        <div class="lang-icon-wrap">
                            <img src={lang.icon} width="50" alt={lang.name}/>
                        </div>
                        <div class="lang-details">
                            <span class="lang-name">{lang.name}</span>
                            <span class="lang-stat">{lang.stat}</span>
                            <span class="lang-badge">{lang.badge}</span>
                        </div>
                        <div class="lang-bar-mini">
                            <div class={`bar-fill ${lang.name.toLowerCase()}`} style={`width: ${lang.barWidth}`}></div>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Row 2: Other Languages -->
            <div class="lang-grid-secondary">
                {secondaryLanguages.map(lang => (
                    <a href={lang.url} target="_blank" rel="noopener" class="lang-chip">
                        <img src={lang.icon} width="32" alt={lang.name}/>
                        <div class="chip-info">
                            <span class="chip-name">{lang.name}</span>
                            <span class="chip-stat">{lang.stat}</span>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Tech Categories Grid -->
            <div class="tech-categories-grid">
                {techCategories.map(category => (
                    <div class="tech-cat">
                        <div class="cat-label"><i class={category.icon}></i> {category.title}</div>
                        <div class="cat-items">
                            {category.items.map(item => (
                                <a href={item.url} target="_blank" class="mini-chip">
                                    <i class={item.icon}></i> {item.name}
                                    <span class="chip-stat">{item.stat} · {item.desc}</span>
                                </a>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Dashboard Footer -->
        <div class="dashboard-footer">
            <div class="sources-row">
                <span class="source-label"><i class="fas fa-link"></i> Fuentes:</span>
                <a href="https://survey.stackoverflow.co/2024/" target="_blank" class="source-link">
                    <i class="fab fa-stack-overflow"></i> Stack Overflow 2024
                </a>
                <a href="https://github.blog/news-insights/octoverse/octoverse-2024/" target="_blank" class="source-link">
                    <i class="fab fa-github"></i> GitHub Octoverse 2024
                </a>
            </div>
            <div class="update-badge">
                <i class="fas fa-sync-alt"></i> Actualizado: Diciembre 2025
            </div>
        </div>
    </div>
</section>
