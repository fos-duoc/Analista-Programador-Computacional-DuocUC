    </div>

    <!-- Portfolio Tips -->
    <div class="tips-grid" data-aos="fade-up" data-aos-delay="100">
        {portfolioTips.map((tip, idx) => (
            <div class="tip-card glass-card" data-aos="zoom-in" data-aos-delay={100 + idx * 50}>
                <div class="tip-icon">
                    <i class={tip.icon}></i>
                </div>
                <h4>{tip.title}</h4>
                <p>{tip.description}</p>
            </div>
        ))}
    </div>

    <!-- Category Filters -->
    <div class="category-filters" data-aos="fade-up" data-aos-delay="150">
        <button class="filter-btn active" data-filter="all">
            <i class="fas fa-th-large"></i> Todos
        </button>
        {portfolioCategories.map(cat => (
            <button class="filter-btn" data-filter={cat.id} style={`--cat-color: ${cat.color}`}>
                <i class={cat.icon}></i> {cat.title.split(' ')[0]}
            </button>
        ))}
    </div>

    <!-- Projects Grid -->
    <div class="projects-container">
        {portfolioCategories.map((category, catIdx) => (
            <div class="category-section" data-category={category.id} data-aos="fade-up" data-aos-delay={50 + catIdx * 30}>
                <div class="category-header" style={`--cat-color: ${category.color}`}>
                    <div class="cat-icon">
                        <i class={category.icon}></i>
                    </div>
                    <h3>{category.title}</h3>
                    <span class="project-count">{category.projects.length} proyectos</span>
                </div>

                <div class="projects-grid">
                    {category.projects.map((project, projIdx) => (
                        <div class="project-card glass-card" data-aos="zoom-in" data-aos-delay={100 + projIdx * 50}>
                            <div class="project-header">
                                <h4>{project.name}</h4>
                                <span class={`difficulty-badge ${project.difficulty.toLowerCase()}`}>
                                    {project.difficulty}
                                </span>
                            </div>

                            <p class="project-description">{project.description}</p>

                            <div class="tech-stack">
                                {project.tech.map(tech => (
                                    <span class="tech-tag">{tech}</span>
                                ))}
                            </div>

                            <div class="features-list">
                                <span class="features-label">Features:</span>
                                {project.features.map(feature => (
                                    <span class="feature-tag">
                                        <i class="fas fa-check"></i> {feature}
                                    </span>
                                ))}
                            </div>

                            <div class="project-footer">
                                <span class="time-estimate">
                                    <i class="fas fa-clock"></i> {project.timeEstimate}
                                </span>
                                <div class="project-actions">
                                    <button class="action-btn demo" title="Ver Demo">
                                        <i class="fas fa-external-link-alt"></i>
                                    </button>
                                    <button class="action-btn repo" title="Ver Código">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        ))}
    </div>

    <!-- Call to Action -->
    <div class="cta-section glass-card" data-aos="fade-up">
        <div class="cta-content">
            <h3>¿Listo para construir tu portafolio?</h3>
            <p>Empieza con proyectos pequeños y ve aumentando la complejidad. Lo importante es tener código que mostrar.</p>
        </div>
        <div class="cta-actions">
            <a href="https://github.com/new" target="_blank" class="cta-btn primary">
                <i class="fab fa-github"></i> Crear Repositorio
            </a>
            <a href="https://vercel.com" target="_blank" class="cta-btn secondary">
                <i class="fas fa-rocket"></i> Desplegar en Vercel
            </a>
        </div>
    </div>
</section>

<script is:inline>
document.addEventListener('astro:page-load', initWorkProjects);
document.addEventListener('DOMContentLoaded', initWorkProjects);

function initWorkProjects() {
    const filterBtns = document.querySelectorAll('.work-projects-section .filter-btn');
    const categorySections = document.querySelectorAll('.work-projects-section .category-section');

    filterBtns.forEach(btn => {
        btn.onclick = () => {
            const filter = btn.dataset.filter;

            // Update active button
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Filter sections
            categorySections.forEach(section => {
                if (filter === 'all' || section.dataset.category === filter) {
                    section.style.display = 'block';
                    section.style.animation = 'fadeIn 0.3s ease';
                } else {
                    section.style.display = 'none';
                }
            });
        };
    });
}
</script>

