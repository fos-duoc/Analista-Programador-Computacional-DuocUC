---
// NotionEmbed.astro - Embed de Notion para documentación/notas del curso
// Placeholder configurable - el usuario puede agregar su propia URL de Notion

interface Props {
    notionUrl?: string;
    height?: string;
}

const {
    notionUrl = "", // URL de Notion pública
    height = "600px"
} = Astro.props;

const hasNotionUrl = notionUrl && notionUrl.length > 0;
---

<section id="notion-workspace" class="notion-section">
    <div class="notion-container">
        <!-- Header -->
        <div class="notion-header" data-aos="fade-up">
            <div class="notion-header-icon">
                <svg viewBox="0 0 100 100" class="notion-logo">
                    <path fill="currentColor" d="M6.017 4.313l55.333 -4.087c6.797 -0.583 8.543 -0.19 12.817 2.917l17.663 12.443c2.913 2.14 3.883 2.723 3.883 5.053v68.243c0 4.277 -1.553 6.807 -6.99 7.193L24.467 99.967c-4.08 0.193 -6.023 -0.39 -8.16 -3.113L3.3 79.94c-2.333 -3.113 -3.3 -5.443 -3.3 -8.167V11.113c0 -3.497 1.553 -6.413 6.017 -6.8z"/>
                    <path fill="#0a0a0f" d="M61.35 0.227l-55.333 4.087C1.553 4.7 0 7.617 0 11.113v60.66c0 2.723 0.967 5.053 3.3 8.167l13.007 16.913c2.137 2.723 4.08 3.307 8.16 3.113l64.257 -3.89c5.433 -0.387 6.99 -2.917 6.99 -7.193V20.64c0 -2.21 -0.873 -2.847 -3.443 -4.733L74.167 3.143c-4.273 -3.107 -6.02 -3.5 -12.817 -2.917zM25.92 19.523c-5.247 0.353 -6.437 0.433 -9.417 -1.99L8.927 11.507c-0.77 -0.78 -0.383 -1.753 1.557 -1.947l53.193 -3.887c4.467 -0.39 6.793 1.167 8.54 2.527l9.123 6.61c0.39 0.197 1.36 1.36 0.193 1.36l-54.933 3.307 -0.68 0.047zM19.803 88.3V30.367c0 -2.53 0.777 -3.697 3.103 -3.893L86 22.78c2.14 -0.193 3.107 1.167 3.107 3.693v57.547c0 2.53 -0.39 4.67 -3.883 4.863l-60.377 3.5c-3.493 0.193 -5.043 -0.97 -5.043 -4.083zm59.6 -54.827c0.387 1.75 0 3.5 -1.75 3.7l-2.91 0.577v42.773c-2.527 1.36 -4.853 2.137 -6.797 2.137 -3.107 0 -3.883 -0.973 -6.21 -3.887l-19.03 -29.94v28.967l6.02 1.363s0 3.5 -4.857 3.5l-13.39 0.777c-0.39 -0.78 0 -2.723 1.357 -3.11l3.497 -0.97v-38.3L30.48 40.667c-0.39 -1.75 0.58 -4.277 3.3 -4.473l14.367 -0.967 19.8 30.327v-26.83l-5.047 -0.58c-0.39 -2.143 1.163 -3.7 3.103 -3.89l13.4 -0.78z"/>
                </svg>
            </div>
            <h2>Notion Workspace</h2>
            <p class="notion-subtitle">Documentación, notas y recursos del curso en tiempo real</p>
        </div>

        <!-- Notion Content Area -->
        <div class="notion-content glass-card" data-aos="fade-up" data-aos-delay="100">
            {hasNotionUrl ? (
                <!-- Notion Embed cuando hay URL -->
                <div class="notion-embed-wrapper" style={`height: ${height}`}>
                    <iframe
                        src={notionUrl}
                        title="Notion Workspace"
                        class="notion-iframe"
                        frameborder="0"
                        allowfullscreen>
                    </iframe>
                </div>
            ) : (
                <!-- Placeholder cuando no hay URL -->
                <div class="notion-placeholder">
                    <div class="placeholder-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <h3>Workspace en Construcción</h3>
                    <p>Próximamente: documentación del curso, notas colaborativas, recursos y más</p>

                    <div class="placeholder-features">
                        <div class="feature-item">
                            <i class="fas fa-book"></i>
                            <span>Apuntes de Clase</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-tasks"></i>
                            <span>Ejercicios Prácticos</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-code"></i>
                            <span>Code Snippets</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-link"></i>
                            <span>Recursos Externos</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Calendario Académico</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-users"></i>
                            <span>Notas Colaborativas</span>
                        </div>
                    </div>

                    <div class="placeholder-cta">
                        <a href="https://www.notion.so/students" target="_blank" rel="noopener" class="cta-btn notion-cta">
                            <i class="fas fa-external-link-alt"></i>
                            Obtener Notion Gratis (Estudiantes)
                        </a>
                    </div>

                    <div class="setup-hint">
                        <i class="fas fa-info-circle"></i>
                        <span>Para configurar: agrega tu URL de Notion pública en el componente</span>
                    </div>
                </div>
            )}
        </div>

        <!-- Notion Tips -->
        <div class="notion-tips glass-card" data-aos="fade-up" data-aos-delay="200">
            <div class="tips-header">
                <i class="fas fa-lightbulb"></i>
                <span>Tips para usar Notion como estudiante</span>
            </div>
            <div class="tips-grid">
                <div class="tip-card">
                    <i class="fas fa-graduation-cap"></i>
                    <h4>Cuenta Educativa</h4>
                    <p>Notion Plus gratis con tu email .edu o institucional</p>
                </div>
                <div class="tip-card">
                    <i class="fas fa-clone"></i>
                    <h4>Templates</h4>
                    <p>Usa templates para notas de clase, proyectos y tracking</p>
                </div>
                <div class="tip-card">
                    <i class="fas fa-database"></i>
                    <h4>Bases de Datos</h4>
                    <p>Organiza tareas, materias y calificaciones con databases</p>
                </div>
                <div class="tip-card">
                    <i class="fas fa-share-alt"></i>
                    <h4>Colaboración</h4>
                    <p>Comparte páginas con compañeros para proyectos grupales</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .notion-section {
        padding: 4rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Header */
    .notion-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .notion-header-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .notion-logo {
        width: 45px;
        height: 45px;
        color: #f8fafc;
    }

    .notion-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .notion-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
    }

    /* Content Area */
    .notion-content {
        padding: 0;
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .notion-embed-wrapper {
        width: 100%;
        min-height: 500px;
    }

    .notion-iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    /* Placeholder */
    .notion-placeholder {
        padding: 4rem 2rem;
        text-align: center;
    }

    .placeholder-icon {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(124, 58, 237, 0.2));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .placeholder-icon i {
        font-size: 3rem;
        background: linear-gradient(135deg, #00d4ff, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .notion-placeholder h3 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 0.5rem;
    }

    .notion-placeholder > p {
        font-size: 1rem;
        color: #94a3b8;
        margin-bottom: 2rem;
    }

    .placeholder-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        font-size: 0.85rem;
        color: #94a3b8;
    }

    .feature-item i {
        color: #00d4ff;
    }

    .placeholder-cta {
        margin-bottom: 2rem;
    }

    .cta-btn.notion-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #f8fafc, #e2e8f0);
        color: #0a0a0f;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-btn.notion-cta:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    }

    .setup-hint {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 0.8rem;
        color: #64748b;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
        max-width: 500px;
        margin: 0 auto;
    }

    .setup-hint i {
        color: #f59e0b;
    }

    /* Tips Section */
    .notion-tips {
        padding: 1.5rem;
        border-radius: 16px;
    }

    .tips-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        color: #f8fafc;
        margin-bottom: 1.25rem;
    }

    .tips-header i {
        color: #f59e0b;
    }

    .tips-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .tip-card {
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        text-align: center;
    }

    .tip-card i {
        font-size: 1.5rem;
        color: #00d4ff;
        margin-bottom: 0.5rem;
    }

    .tip-card h4 {
        font-size: 0.9rem;
        font-weight: 600;
        color: #f8fafc;
        margin-bottom: 0.25rem;
    }

    .tip-card p {
        font-size: 0.75rem;
        color: #64748b;
        line-height: 1.4;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .notion-header h2 {
            font-size: 1.75rem;
        }

        .placeholder-features {
            grid-template-columns: 1fr 1fr;
        }

        .tips-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    /* Light Mode */
    :global([data-theme="light"]) .notion-header h2 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .notion-logo {
        color: #1e293b;
    }

    :global([data-theme="light"]) .notion-subtitle,
    :global([data-theme="light"]) .notion-placeholder > p {
        color: #64748b;
    }

    :global([data-theme="light"]) .notion-placeholder h3,
    :global([data-theme="light"]) .tips-header,
    :global([data-theme="light"]) .tip-card h4 {
        color: #1e293b;
    }

    :global([data-theme="light"]) .feature-item,
    :global([data-theme="light"]) .tip-card p {
        color: #64748b;
    }

    :global([data-theme="light"]) .cta-btn.notion-cta {
        background: linear-gradient(135deg, #1e293b, #334155);
        color: #f8fafc;
    }
</style>
