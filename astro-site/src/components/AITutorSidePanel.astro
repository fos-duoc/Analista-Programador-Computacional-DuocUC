            document.body.appendChild(widthIndicator);
        }

        // Update width indicator position and value
        function updateWidthIndicator(width, mouseX) {
            if (!widthIndicator) return;
            widthIndicator.textContent = `${width}px`;
            widthIndicator.style.left = (mouseX - 60) + 'px';
        }

        // Remove width indicator
        function removeWidthIndicator() {
            if (widthIndicator) {
                widthIndicator.remove();
                widthIndicator = null;
            }
        }

        // Start resize
        function startResize(e) {
            e.preventDefault();
            isResizing = true;
            startX = e.clientX || e.touches?.[0]?.clientX || 0;
            startWidth = panel.offsetWidth;

            panel.classList.add('resizing');
            document.body.classList.add('panel-resizing');

            createWidthIndicator();
            updateWidthIndicator(startWidth, startX);

            document.addEventListener('mousemove', doResize);
            document.addEventListener('mouseup', stopResize);
            document.addEventListener('touchmove', doResize, { passive: false });
            document.addEventListener('touchend', stopResize);
        }

        // Perform resize
        function doResize(e) {
            if (!isResizing) return;
            e.preventDefault();

            const clientX = e.clientX || e.touches?.[0]?.clientX || 0;
            // Since panel is on the right, dragging left increases width
            const deltaX = startX - clientX;
            let newWidth = startWidth + deltaX;

            // Apply constraints
            newWidth = Math.max(MIN_WIDTH, Math.min(MAX_WIDTH, newWidth));

            panel.style.width = newWidth + 'px';
            updateWidthIndicator(Math.round(newWidth), clientX);

            // Dispatch event for Split Pane sync
            window.dispatchEvent(new CustomEvent('tutorPanelResize', {
                detail: { width: newWidth }
            }));
        }

        // Stop resize
        function stopResize() {
            if (!isResizing) return;
            isResizing = false;

            panel.classList.remove('resizing');
            document.body.classList.remove('panel-resizing');

            // Save width to localStorage
            const finalWidth = panel.offsetWidth;
            localStorage.setItem('tutor_panel_width', finalWidth.toString());

            // Dispatch final resize event
            window.dispatchEvent(new CustomEvent('tutorPanelResize', {
                detail: { width: finalWidth, final: true }
            }));

            removeWidthIndicator();

            document.removeEventListener('mousemove', doResize);
            document.removeEventListener('mouseup', stopResize);
            document.removeEventListener('touchmove', doResize);
            document.removeEventListener('touchend', stopResize);
        }

        // Double-click to reset to default width
        resizeHandle.addEventListener('dblclick', () => {
            panel.style.width = DEFAULT_WIDTH + 'px';
            localStorage.setItem('tutor_panel_width', DEFAULT_WIDTH.toString());
            window.dispatchEvent(new CustomEvent('tutorPanelResize', {
                detail: { width: DEFAULT_WIDTH, final: true }
            }));
        });

        // Event listeners
        resizeHandle.addEventListener('mousedown', startResize);
        resizeHandle.addEventListener('touchstart', startResize, { passive: false });

        // Dispatch initial width on load
        const currentWidth = panel.offsetWidth;
        window.dispatchEvent(new CustomEvent('tutorPanelResize', {
            detail: { width: currentWidth, initial: true }
        }));
    }

