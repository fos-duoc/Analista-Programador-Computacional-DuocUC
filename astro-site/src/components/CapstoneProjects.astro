<section id="capstone-projects" class="capstone-section">
    <div class="capstone-container">
        <!-- Header -->
        <div class="capstone-header" data-aos="fade-up">
            <div class="capstone-header-icon">
                <i class="fas fa-project-diagram"></i>
            </div>
            <h2>Proyectos Capstone</h2>
            <p class="capstone-subtitle">Construye tu portafolio con proyectos reales por nivel</p>
            <div class="capstone-stats">
                <span class="capstone-stat">
                    <i class="fas fa-folder-open"></i>
                    <strong>23</strong> Proyectos
                </span>
                <span class="capstone-stat">
                    <i class="fas fa-layer-group"></i>
                    <strong>7</strong> Niveles
                </span>
                <span class="capstone-stat">
                    <i class="fas fa-graduation-cap"></i>
                    APC + IDS
                </span>
                <span class="capstone-stat">
                    <i class="fas fa-briefcase"></i>
                    Portfolio Ready
                </span>
            </div>
        </div>

        <!-- Project Levels -->
        <div class="capstone-levels">
            {projectLevels.map((level, levelIndex) => (
                <div class={`capstone-level level-${level.color}`} data-aos="fade-up" data-aos-delay={levelIndex * 100}>
                    <!-- Level Header -->
                    <div class="level-header">
                        <div class="level-badge">
                            <i class={level.icon}></i>
                            <span>Level {level.levelNum}</span>
                            {level.badge && <span class="level-program-badge">{level.badge}</span>}
                        </div>
                        <div class="level-info">
                            <h3>{level.level}</h3>
                            <p>{level.description}</p>
                            <div class="level-tags">
                                <span class="level-bimestres">{level.bimestres}</span>
                                {level.badge && <span class="level-badge-tag ids">{level.badge}</span>}
                            </div>
                        </div>
                    </div>

                    <!-- Projects Grid -->
                    <div class="projects-grid">
                        {level.projects.map((project, projIndex) => (
                            <div class="project-card glass-card" data-aos="zoom-in" data-aos-delay={100 + projIndex * 50}>
                                <div class="project-header">
                                    <h4>{project.name}</h4>
                                    <div class="project-difficulty">
                                        {[...Array(5)].map((_, i) => (
                                            <i class={`fas fa-star ${i < project.difficulty ? 'filled' : ''}`}></i>
                                        ))}
                                    </div>
                                </div>
                                <p class="project-description">{project.description}</p>
                                <div class="project-skills">
                                    {project.skills.map(skill => (
                                        <span class="project-skill">{skill}</span>
                                    ))}
                                </div>
                                <div class="project-subject">
                                    <i class="fas fa-book"></i> {project.subject}
                                </div>
                                <div class="project-footer">
                                    <span class="project-duration">
                                        <i class="fas fa-clock"></i> {project.duration}
                                    </span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>

        <!-- Project Tips -->
        <div class="capstone-tips glass-card" data-aos="fade-up">
            <div class="tips-title">
                <i class="fas fa-lightbulb"></i>
                <span>Tips para Proyectos Exitosos</span>
            </div>
            <div class="tips-grid">
                {projectTips.map(tip => (
                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class={tip.icon}></i>
                        </div>
                        <div class="tip-content">
                            <h5>{tip.title}</h5>
                            <p>{tip.desc}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- CTA -->
        <div class="capstone-cta" data-aos="fade-up">
            <a href="https://github.com/new" target="_blank" rel="noopener" class="cta-button">
                <i class="fab fa-github"></i>
                Crear Nuevo Repositorio
            </a>
            <span class="cta-hint">Empieza tu primer proyecto hoy</span>
        </div>
    </div>
</section>

<style>
