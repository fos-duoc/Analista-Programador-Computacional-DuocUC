const categories = ["Todos", "Full-Stack", "Backend", "Data Engineering", "DevOps", "ML/AI"];
---

<section id="professional-projects" class="pro-projects-section">
    <div class="pro-header" data-aos="fade-up">
        <div class="header-icon-wrap">
            <i class="fas fa-briefcase"></i>
        </div>
        <h2>Proyectos <span class="gradient-text">Profesionales</span></h2>
        <p>Proyectos reales para tu portafolio que impresionarán a los empleadores</p>

        <div class="category-filters">
            {categories.map((cat, idx) => (
                <button class={`filter-btn ${idx === 0 ? 'active' : ''}`} data-category={cat}>
                    {cat}
                </button>
            ))}
        </div>
    </div>

    <div class="projects-grid" data-aos="fade-up" data-aos-delay="100">
        {featuredProjects.map((project, idx) => (
            <article class="project-card glass-card" data-category={project.category} data-aos="zoom-in" data-aos-delay={50 + idx * 50}>
                <div class="project-image">
                    <img src={project.image} alt={project.title} loading="lazy" />
                    <div class="project-overlay">
                        <a href={project.demo} target="_blank" class="overlay-btn demo">
                            <i class="fas fa-external-link-alt"></i> Demo
                        </a>
                        <a href={project.github} target="_blank" class="overlay-btn github">
                            <i class="fab fa-github"></i> Código
                        </a>
                    </div>
                    <span class="category-badge">{project.category}</span>
                    <span class={`difficulty-badge ${project.difficulty.toLowerCase()}`}>{project.difficulty}</span>
                </div>

                <div class="project-content">
                    <h3>{project.title}</h3>
                    <p>{project.description}</p>

                    <div class="tech-stack">
                        {project.tech.map(tech => (
                            <span class="tech-tag">{tech}</span>
                        ))}
                    </div>

                    <div class="highlights">
                        {project.highlights.map(hl => (
                            <span class="highlight-chip">
                                <i class="fas fa-check"></i> {hl}
                            </span>
                        ))}
                    </div>
                </div>
            </article>
        ))}
    </div>

    <div class="pro-footer" data-aos="fade-up" data-aos-delay="200">
        <div class="footer-content">
            <div class="footer-tips">
                <h4><i class="fas fa-lightbulb"></i> Tips para tu Portafolio</h4>
                <ul>
                    <li><i class="fas fa-check-circle"></i> Documenta tu proceso de desarrollo en el README</li>
                    <li><i class="fas fa-check-circle"></i> Incluye screenshots y demos interactivas</li>
                    <li><i class="fas fa-check-circle"></i> Escribe tests y usa CI/CD</li>
                    <li><i class="fas fa-check-circle"></i> Despliega en Vercel, Railway o Render (gratis)</li>
                </ul>
            </div>
            <div class="footer-cta">
                <span class="cta-badge"><i class="fas fa-rocket"></i> ¿Listo para empezar?</span>
                <p>Elige un proyecto, clona el template y comienza a construir tu portafolio profesional.</p>
                <a href="https://github.com/new" target="_blank" class="cta-btn primary">
                    <i class="fab fa-github"></i> Crear Repositorio
                </a>
            </div>
        </div>
    </div>
</section>

<script is:inline>
document.addEventListener('DOMContentLoaded', initProjectFilters);
document.addEventListener('astro:page-load', initProjectFilters);

function initProjectFilters() {
    const filterBtns = document.querySelectorAll('.pro-projects-section .filter-btn');
    const projectCards = document.querySelectorAll('.pro-projects-section .project-card');

    filterBtns.forEach(btn => {
        btn.onclick = () => {
            // Update active button
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const category = btn.dataset.category;

            // Filter cards
            projectCards.forEach(card => {
                if (category === 'Todos' || card.dataset.category === category) {
                    card.style.display = 'block';
                    card.style.animation = 'fadeInUp 0.4s ease forwards';
                } else {
                    card.style.display = 'none';
                }
            });
        };
    });
}
</script>

<style>
    .pro-projects-section {
        padding: 4rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .pro-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .header-icon-wrap {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2));
        border-radius: 20px;
        font-size: 2rem;
        color: #3b82f6;
    }

    .pro-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0 0 0.5rem;
    }

    .gradient-text {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .pro-header p {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    /* Category Filters */
    .category-filters {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .filter-btn {
        padding: 0.6rem 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--border-color);
        border-radius: 25px;
        color: var(--text-secondary);
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: var(--text-primary);
    }

    .filter-btn.active {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-color: transparent;
        color: white;
    }

    /* Projects Grid */
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    /* Project Card */
    .project-card {
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-8px);
    }

    .project-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
    }

    .project-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .project-card:hover .project-overlay {
        opacity: 1;
    }

    .overlay-btn {
        padding: 0.6rem 1.25rem;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .overlay-btn.demo {
        background: #3b82f6;
        color: white;
    }

    .overlay-btn.github {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .overlay-btn:hover {
        transform: translateY(-2px);
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        padding: 0.35rem 0.75rem;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
        color: #00d4ff;
    }

    .difficulty-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .difficulty-badge.principiante {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
    }

    .difficulty-badge.intermedio {
        background: rgba(245, 158, 11, 0.2);
        color: #f59e0b;
    }

    .difficulty-badge.avanzado {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    .project-content {
        padding: 1.5rem;
    }

    .project-content h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 0.5rem;
        color: var(--text-primary);
    }

    .project-content p {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0 0 1rem;
        line-height: 1.5;
    }

    .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-bottom: 1rem;
    }

    .tech-tag {
        padding: 0.3rem 0.6rem;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 6px;
        font-size: 0.75rem;
        color: #3b82f6;
        font-weight: 500;
    }

    .highlights {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }

    .highlight-chip {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        padding: 0.25rem 0.5rem;
        background: rgba(16, 185, 129, 0.1);
        border-radius: 4px;
        font-size: 0.7rem;
        color: #10b981;
    }

    .highlight-chip i {
        font-size: 0.6rem;
    }

    /* Footer */
    .pro-footer {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 20px;
        padding: 2rem;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: center;
    }

    .footer-tips h4 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.1rem;
        margin: 0 0 1rem;
        color: var(--text-primary);
    }

    .footer-tips h4 i {
        color: #f59e0b;
    }

    .footer-tips ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-tips li {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 0;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .footer-tips li i {
        color: #10b981;
        font-size: 0.8rem;
    }

    .footer-cta {
        text-align: center;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
    }

    .cta-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(59, 130, 246, 0.15);
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #3b82f6;
        margin-bottom: 0.75rem;
    }

    .footer-cta p {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0 0 1rem;
    }

    .cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-btn.primary {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        color: white;
    }

    .cta-btn.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
    }

    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 900px) {
        .footer-content {
            grid-template-columns: 1fr;
        }

        .projects-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 600px) {
        .pro-header h2 {
            font-size: 1.75rem;
        }

        .category-filters {
            justify-content: flex-start;
            overflow-x: auto;
            flex-wrap: nowrap;
            padding-bottom: 0.5rem;
        }

        .project-image {
            height: 180px;
        }
    }

    /* Light Mode */
    :global([data-theme="light"]) .pro-projects-section {
        background: transparent;
    }

    :global([data-theme="light"]) .pro-header h2 {
        color: var(--text-primary);
    }

    :global([data-theme="light"]) .filter-btn {
        background: rgba(0, 0, 0, 0.03);
        color: var(--text-secondary);
    }

    :global([data-theme="light"]) .filter-btn:hover {
        background: rgba(0, 0, 0, 0.06);
        color: var(--text-primary);
    }

    :global([data-theme="light"]) .project-card {
        background: var(--bg-card);
        box-shadow: var(--shadow-sm);
    }

    :global([data-theme="light"]) .project-content h3 {
        color: var(--text-primary);
    }

    :global([data-theme="light"]) .project-content p {
        color: var(--text-secondary);
    }

    :global([data-theme="light"]) .tech-tag {
        background: rgba(59, 130, 246, 0.08);
    }

    :global([data-theme="light"]) .pro-footer {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.06), rgba(139, 92, 246, 0.06));
    }

    :global([data-theme="light"]) .footer-tips h4 {
        color: var(--text-primary);
    }

    :global([data-theme="light"]) .footer-tips li {
        color: var(--text-secondary);
    }

    :global([data-theme="light"]) .footer-cta {
        background: rgba(0, 0, 0, 0.02);
    }
</style>
