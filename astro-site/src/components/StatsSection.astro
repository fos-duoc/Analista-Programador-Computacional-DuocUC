            </div>
        </div>
        <div class="stats-live-indicator">
            <span class="live-dot"></span>
            <span>Live</span>
        </div>
    </div>

    <!-- Main Dashboard Grid -->
    <div class="stats-dashboard-grid" data-aos="fade-up" data-aos-delay="100">
        <!-- Left Column: Repo Info + Languages -->
        <div class="stats-column left">
            <!-- Repo Card Premium -->
            <div class="repo-card-ultra glass-card">
                <div class="repo-header">
                    <div class="repo-avatar">
                        <i class="fab fa-github"></i>
                    </div>
                    <div class="repo-details">
                        <span class="repo-owner-tag">
                            <i class="fas fa-user"></i> {username}
                        </span>
                        <h3 class="repo-name-ultra">{repoName}</h3>
                    </div>
                    <div class="repo-visibility">
                        <i class="fas fa-globe"></i> Public
                    </div>
                </div>

                <p class="repo-desc-ultra">
                    游닄 Materiales completos del programa Analista Programador Computacional - DuocUC Online 2025. Incluye apuntes, c칩digo, proyectos y recursos de estudio.
                </p>

                <!-- Badges Row -->
                <div class="repo-badges-row">
                    <img src={`https://img.shields.io/github/stars/${repoId}?style=flat-square&logo=github&logoColor=white&labelColor=0d1117&color=00d4ff`} alt="Stars" loading="lazy"/>
                    <img src={`https://img.shields.io/github/forks/${repoId}?style=flat-square&logo=git&logoColor=white&labelColor=0d1117&color=7c3aed`} alt="Forks" loading="lazy"/>
                    <img src={`https://img.shields.io/github/last-commit/${repoId}?style=flat-square&logo=github&logoColor=white&labelColor=0d1117&color=10b981`} alt="Last Commit" loading="lazy"/>
                </div>

                <!-- Topics Tags -->
                <div class="repo-topics">
                    <span class="topic-tag">education</span>
                    <span class="topic-tag">duoc-uc</span>
                    <span class="topic-tag">programming</span>
                    <span class="topic-tag">spanish</span>
                </div>

                <!-- Action Button -->
                <a href={repoBase} target="_blank" class="repo-action-btn">
                    <i class="fab fa-github"></i>
                    <span>View on GitHub</span>
                    <i class="fas fa-external-link-alt"></i>
                </a>
            </div>

            <!-- Languages Card with Animation -->
            <div class="languages-card-ultra glass-card">
                <div class="languages-header-ultra">
                    <div class="lang-header-left">
                        <i class="fas fa-code"></i>
                        <h3>Languages</h3>
                    </div>
                    <span class="lang-count">{languages.length} used</span>
                </div>

                <!-- Animated Progress Bar -->
                <div class="languages-bar-ultra">
                    {languages.map((lang, i) => (
                        <div
                            class="lang-segment-ultra"
                            style={`--width: ${lang.percent}%; --color: ${lang.color}; --delay: ${i * 0.1}s;`}
                            data-tooltip={`${lang.name}: ${lang.percent}%`}
                        ></div>
                    ))}
                </div>

                <!-- Legend with hover effects -->
                <div class="languages-legend-ultra">
                    {languages.map(lang => (
                        <div class="lang-item-ultra">
                            <span class="lang-dot-ultra" style={`background: ${lang.color};`}></span>
                            <span class="lang-name-ultra">{lang.name}</span>
                            <span class="lang-percent-ultra">{lang.percent}%</span>
                        </div>
                    ))}
                </div>
            </div>
        </div>

        <!-- Center Column: Activity + Metrics -->
