                {quickStats.map((stat, i) => (
                    <div class="quick-stat-card glass-card" style={`--accent: ${stat.color}; --delay: ${i * 0.1}s;`}
                         data-premium-tooltip={stat.tooltip}>
                        <div class="stat-icon-ring" style={`--color: ${stat.color};`}>
                            <i class={`fas ${stat.icon}`}></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-value-ultra">{stat.value}</span>
                            <span class="stat-label-ultra">{stat.label}</span>
