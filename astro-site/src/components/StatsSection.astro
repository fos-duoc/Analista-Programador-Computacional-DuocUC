                    <i class="fas fa-chart-pie"></i>
                    <h3>Progress Metrics</h3>
                </div>
                <div class="metrics-circles">
                    {metrics.map(metric => (
                        <div class="metric-circle-wrapper" data-premium-tooltip={metric.tooltip}>
                            <svg class="metric-circle" viewBox="0 0 100 100">
                                <defs>
                                    <linearGradient id={`gradient-${metric.label}`} x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style={`stop-color: ${metric.color};`} />
                                        <stop offset="100%" style={`stop-color: ${metric.gradientEnd};`} />
                                    </linearGradient>
                                </defs>
                                <circle class="circle-bg" cx="50" cy="50" r="42" />
                                <circle
                                    class="circle-progress"
                                    cx="50"
                                    cy="50"
                                    r="42"
                                    style={`stroke: url(#gradient-${metric.label}); --progress: ${metric.value};`}
                                />
                            </svg>
                            <div class="metric-value-center">
                                <span class="metric-number">{metric.value}%</span>
                            </div>
                            <span class="metric-label-bottom">{metric.label}</span>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Activity Heatmap Preview -->
            <div class="activity-card glass-card">
                <div class="activity-header">
                    <i class="fas fa-fire-alt"></i>
                    <h3>Activity</h3>
                    <span class="activity-period">Last 30 days</span>
                </div>
                <div class="activity-heatmap">
                    {[...Array(30)].map((_, i) => (
                        <div
                            class={`heat-cell level-${Math.floor(Math.random() * 5)}`}
                            style={`--delay: ${i * 0.02}s;`}
                        ></div>
                    ))}
                </div>
                <div class="activity-legend">
                    <span class="legend-label">Less</span>
                    <div class="legend-cells">
                        <div class="heat-cell level-0"></div>
                        <div class="heat-cell level-1"></div>
                        <div class="heat-cell level-2"></div>
                        <div class="heat-cell level-3"></div>
                        <div class="heat-cell level-4"></div>
                    </div>
                    <span class="legend-label">More</span>
                </div>
            </div>
        </div>

        <!-- Right Column: Tech Stack + CI/CD -->
        <div class="stats-column right">
            <!-- Tech Stack Card -->
            <div class="techstack-card glass-card">
                <div class="techstack-header">
                    <i class="fas fa-layer-group"></i>
                    <h3>Tech Stack</h3>
                </div>
                <div class="techstack-grid">
                    {techStack.map((tech, i) => (
                        <div class="tech-item-mini" style={`--delay: ${i * 0.05}s;`}
                             data-premium-tooltip={tech.tooltip}>
                            <i class={`${tech.icon} colored`} style={`color: ${tech.color};`}></i>
                            <span>{tech.name}</span>
                        </div>
                    ))}
                </div>
            </div>

            <!-- CI/CD Status -->
            <div class="cicd-card glass-card">
                <div class="cicd-header">
                    <i class="fas fa-sync-alt"></i>
                    <h3>CI/CD Status</h3>
                </div>
                <div class="cicd-items">
                    {cicdStatus.map(item => (
                        <div class={`cicd-item ${item.status}`} data-premium-tooltip={item.tooltip}>
                            <i class={`fas ${item.icon}`}></i>
                            <span class="cicd-name">{item.name}</span>
                            <span class={`cicd-status-badge ${item.status}`}>
                                {item.status === "passing" && <><i class="fas fa-check"></i> Passing</>}
                                {item.status === "active" && <><i class="fas fa-circle"></i> Active</>}
                                {item.status === "live" && <><i class="fas fa-broadcast-tower"></i> Live</>}
                            </span>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Quick Links -->
            <div class="quicklinks-card glass-card">
                <div class="quicklinks-header">
                    <i class="fas fa-link"></i>
                    <h3>Quick Links</h3>
                </div>
                <div class="quicklinks-grid">
                    <a href={`${repoBase}/issues`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="Issues|Reporta bugs o solicita nuevas funcionalidades|Bug Reports,Features|info|fa-bug|GITHUB">
                        <i class="fas fa-bug"></i>
                        <span>Issues</span>
                    </a>
                    <a href={`${repoBase}/pulls`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="Pull Requests|Contribuciones y cambios propuestos al repositorio|Reviews,Merges|info|fa-code-branch|GITHUB">
                        <i class="fas fa-code-branch"></i>
                        <span>PRs</span>
                    </a>
                    <a href={`${repoBase}/graphs/contributors`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="Contributors|Personas que han contribuido al proyecto|Commits,Code|info|fa-users|GITHUB">
                        <i class="fas fa-users"></i>
                        <span>Contributors</span>
                    </a>
                    <a href={`${repoBase}/commits`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="History|Historial completo de commits del repositorio|Timeline,Changes|info|fa-history|GITHUB">
                        <i class="fas fa-history"></i>
                        <span>History</span>
                    </a>
                    <a href={`${repoBase}/network`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="Network|Grafo de forks y branches del repositorio|Forks,Branches|info|fa-project-diagram|GITHUB">
                        <i class="fas fa-project-diagram"></i>
                        <span>Network</span>
                    </a>
                    <a href={`${repoBase}/wiki`} target="_blank" class="quicklink-item"
                       data-premium-tooltip="Wiki|Documentaci칩n y gu칤as del proyecto|Docs,Guides|info|fa-book|GITHUB">
                        <i class="fas fa-book"></i>
                        <span>Wiki</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

