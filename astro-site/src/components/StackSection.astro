<section id="stack" class="stack-section">
    <div class="section-header" data-aos="fade-up">
        <h2 class="section-title">
            <i class="fas fa-layer-group"></i>
            Stack Tecnológico
        </h2>
        <p class="section-subtitle">Tecnologías y herramientas del programa</p>
    </div>

    <div class="stack-grid">
        {categories.map((category, idx) => (
            <div class="stack-category glass-card" data-aos="zoom-in" data-aos-duration="400" data-aos-delay={idx * 50}>
                <h3 class="category-title"><i class={category.icon}></i> {category.title}</h3>
                <div class="tech-list">
                    {category.techs.map(tech => (
                        <a href={tech.url} target="_blank" rel="noopener" class="tech-item">
                            <i class={tech.icon}></i>
                            <span>{tech.name}</span>
                        </a>
                    ))}
                </div>
            </div>
        ))}
    </div>
</section>
