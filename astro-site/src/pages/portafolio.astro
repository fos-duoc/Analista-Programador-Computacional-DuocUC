<Layout title="Portafolio Guiado | Construye tu Portfolio Profesional - DuocUC">
    <Header />

    <main class="portfolio-page">
        <!-- Hero Section -->
        <section class="page-hero">
            <div class="hero-content" data-aos="fade-up">
                <div class="hero-badge">
                    <i class="fas fa-briefcase"></i>
                    <span>Guía Paso a Paso</span>
                </div>
                <h1>Construye tu <span class="gradient-text">Portafolio</span></h1>
                <p class="hero-subtitle">
                    Tu portafolio es tu carta de presentación profesional. Aprende a crear uno que destaque
                    y te ayude a conseguir oportunidades laborales.
                </p>
                <div class="hero-cta">
                    <a href="#steps" class="btn-primary">
                        <i class="fas fa-play-circle"></i> Comenzar Guía
                    </a>
                    <a href="#templates" class="btn-secondary">
                        <i class="fas fa-palette"></i> Ver Templates
                    </a>
                </div>
            </div>
        </section>

        <!-- Steps Section -->
        <section id="steps" class="steps-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-list-ol"></i> 5 Pasos para tu Portafolio</h2>
                <p>Sigue esta guía para crear un portafolio profesional</p>
            </div>
            <div class="steps-timeline">
                {portfolioSteps.map((step, idx) => (
                    <div class="step-card glass-card" data-aos="fade-up" data-aos-delay={idx * 100}>
                        <div class="step-number" style={`background: ${step.color}20; color: ${step.color};`}>
                            {step.number}
                        </div>
                        <div class="step-icon" style={`color: ${step.color};`}>
                            <i class={step.icon}></i>
                        </div>
                        <h3>{step.title}</h3>
                        <p>{step.description}</p>
                        <ul class="step-tips">
                            {step.tips.map(tip => (
                                <li><i class="fas fa-check"></i> {tip}</li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </section>

        <!-- Elements Section -->
        <section class="elements-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-puzzle-piece"></i> Elementos de un Buen Portafolio</h2>
                <p>Qué debe incluir tu portafolio para destacar</p>
            </div>
            <div class="elements-grid">
                {portfolioElements.map((el, idx) => (
                    <div class="element-card glass-card" data-aos="fade-up" data-aos-delay={idx * 50}>
                        <div class="element-header">
                            <div class="element-icon">
                                <i class={el.icon}></i>
                            </div>
                            <span class={`importance-badge ${el.importance.toLowerCase()}`}>{el.importance}</span>
                        </div>
                        <h3>{el.name}</h3>
                        <p>{el.description}</p>
                        <div class="element-example">
                            <strong>Ejemplo:</strong> {el.example}
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Templates Section -->
        <section id="templates" class="templates-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-palette"></i> Templates para Empezar</h2>
                <p>Plantillas gratuitas para acelerar tu desarrollo</p>
            </div>
            <div class="templates-grid">
                {templates.map((template, idx) => (
                    <a href={template.url} target="_blank" rel="noopener" class="template-card glass-card" data-aos="fade-up" data-aos-delay={idx * 75}>
                        <div class="template-header">
                            <i class={template.icon}></i>
                            <span class="price-badge">{template.price}</span>
                        </div>
                        <h3>{template.name}</h3>
                        <p class="tech-badge">{template.tech}</p>
                        <ul class="template-features">
                            {template.features.map(f => (
                                <li><i class="fas fa-check"></i> {f}</li>
                            ))}
                        </ul>
                        <span class="view-link">Ver template <i class="fas fa-external-link-alt"></i></span>
                    </a>
                ))}
            </div>
        </section>

        <!-- Hosting Section -->
        <section class="hosting-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-cloud-upload-alt"></i> Dónde Hospedar (Gratis)</h2>
                <p>Plataformas para publicar tu portafolio sin costo</p>
            </div>
            <div class="hosting-grid">
                {hostingPlatforms.map((platform, idx) => (
                    <a href={platform.url} target="_blank" rel="noopener" class="hosting-card glass-card" data-aos="fade-up" data-aos-delay={idx * 50}>
                        <div class="hosting-icon">
                            {platform.icon.startsWith('devicon') ? (
                                <i class={platform.icon}></i>
                            ) : platform.icon.startsWith('img:') ? (
                                <img src={platform.icon.replace('img:', '')} alt={platform.name} width="32" height="32" />
                            ) : (
                                <i class={platform.icon}></i>
                            )}
                        </div>
                        <div class="hosting-info">
                            <h4>{platform.name}</h4>
                            <span class="best-for">Ideal para: {platform.best}</span>
                        </div>
                        {platform.free && <span class="free-badge">Gratis</span>}
                    </a>
                ))}
            </div>
        </section>

        <!-- Mistakes Section -->
        <section class="mistakes-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-exclamation-triangle"></i> Errores Comunes a Evitar</h2>
                <p>Aprende de los errores de otros para no cometerlos</p>
            </div>
            <div class="mistakes-grid">
                {commonMistakes.map((item, idx) => (
                    <div class="mistake-card glass-card" data-aos="fade-up" data-aos-delay={idx * 75}>
                        <div class="mistake-content">
                            <div class="mistake-wrong">
                                <i class="fas fa-times-circle"></i>
                                <span>{item.mistake}</span>
                            </div>
                            <div class="mistake-right">
                                <i class="fas fa-check-circle"></i>
                                <span>{item.solution}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Checklist Section -->
        <section class="checklist-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-clipboard-check"></i> Checklist Final</h2>
                <p>Verifica que tu portafolio cumpla con todos estos puntos</p>
            </div>
            <div class="checklist-container glass-card" data-aos="fade-up">
                <div class="checklist-grid">
                    {checklist.map((item, idx) => (
                        <label class="checklist-item">
                            <input type="checkbox" id={`check-${idx}`} />
                            <span class="checkmark"></span>
                            <span class="check-text">{item}</span>
                        </label>
                    ))}
                </div>
                <div class="checklist-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" id="checklist-progress"></div>
                    </div>
                    <span class="progress-text"><span id="checked-count">0</span> de {checklist.length} completados</span>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content glass-card" data-aos="zoom-in">
                <h2>¿Listo para Crear tu Portafolio?</h2>
                <p>Empieza con proyectos de práctica y construye tu presencia profesional</p>
                <div class="cta-buttons">
                    <a href={`${baseUrl}/proyectos-estudio`} class="cta-btn primary">
                        <i class="fas fa-laptop-code"></i> Proyectos de Estudio
                    </a>
                    <a href={`${baseUrl}/proyectos-profesionales`} class="cta-btn secondary">
                        <i class="fas fa-briefcase"></i> Proyectos Profesionales
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<script is:inline>
document.addEventListener('astro:page-load', initPortfolioPage);
document.addEventListener('DOMContentLoaded', initPortfolioPage);

function initPortfolioPage() {
    // Checklist functionality
    const checkboxes = document.querySelectorAll('.checklist-item input[type="checkbox"]');
    const progressFill = document.getElementById('checklist-progress');
    const checkedCount = document.getElementById('checked-count');
    const total = checkboxes.length;

    // Load saved state
    checkboxes.forEach((cb, idx) => {
        const saved = localStorage.getItem(`portfolio-check-${idx}`);
        if (saved === 'true') {
            cb.checked = true;
        }

        cb.onchange = () => {
            localStorage.setItem(`portfolio-check-${idx}`, cb.checked);
            updateProgress();
        };
    });

    function updateProgress() {
        const checked = document.querySelectorAll('.checklist-item input:checked').length;
        const percentage = (checked / total) * 100;
        if (progressFill) progressFill.style.width = `${percentage}%`;
        if (checkedCount) checkedCount.textContent = checked;
    }

    updateProgress();
}
</script>

