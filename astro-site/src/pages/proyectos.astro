---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LearningRoadmap from '../components/LearningRoadmap.astro';
import CapstoneProjects from '../components/CapstoneProjects.astro';
import WorkProjects from '../components/WorkProjects.astro';
---

<Layout title="Proyectos & Roadmap | DuocUC">
    <Header />

    <!-- Page Hero -->
    <section class="page-hero">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-rocket"></i>
                <span>Proyectos & Roadmap</span>
            </div>
            <h1>Proyectos para tu <span class="gradient-text">Carrera</span></h1>
            <p>Desde proyectos de estudio hasta tu portafolio profesional</p>

            <!-- Tab Navigation -->
            <div class="tab-navigation">
                <button class="tab-btn active" data-tab="estudio">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Proyectos de Estudio</span>
                    <small>Roadmap & Pr√°ctica</small>
                </button>
                <button class="tab-btn" data-tab="trabajo">
                    <i class="fas fa-briefcase"></i>
                    <span>Proyectos de Trabajo</span>
                    <small>Portafolio Profesional</small>
                </button>
            </div>
        </div>
    </section>

    <!-- Tab Content: Proyectos de Estudio -->
    <div id="tab-estudio" class="tab-content active">
        <!-- Progress Indicator -->
        <div class="progress-section">
            <div class="progress-container">
                <div class="progress-item">
                    <div class="progress-icon beginner">
                        <i class="fas fa-seedling"></i>
                    </div>
                    <span>Beginner</span>
                </div>
                <div class="progress-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="progress-item">
                    <div class="progress-icon intermediate">
                        <i class="fas fa-code"></i>
                    </div>
                    <span>Intermediate</span>
                </div>
                <div class="progress-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="progress-item">
                    <div class="progress-icon advanced">
                        <i class="fas fa-star"></i>
                    </div>
                    <span>Advanced</span>
                </div>
            </div>
        </div>

        <!-- Learning Roadmap -->
        <LearningRoadmap />

        <!-- Capstone Projects -->
        <CapstoneProjects />
    </div>

    <!-- Tab Content: Proyectos de Trabajo -->
    <div id="tab-trabajo" class="tab-content">
        <WorkProjects />
    </div>

    <Footer />
</Layout>

<script is:inline>
document.addEventListener('astro:page-load', initProjectTabs);
document.addEventListener('DOMContentLoaded', initProjectTabs);

function initProjectTabs() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
        btn.onclick = () => {
            const targetTab = btn.dataset.tab;

            // Update active button
            tabBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Update active content
            tabContents.forEach(content => {
                if (content.id === `tab-${targetTab}`) {
                    content.classList.add('active');
                    content.style.animation = 'fadeInTab 0.4s ease';
                } else {
                    content.classList.remove('active');
                }
            });

            // Scroll to top of content
            window.scrollTo({
                top: document.querySelector('.page-hero').offsetHeight - 100,
                behavior: 'smooth'
            });
        };
    });
}
</script>

<style>
    .page-hero {
        padding: 8rem 2rem 3rem;
        text-align: center;
        background: linear-gradient(180deg, rgba(16, 185, 129, 0.1) 0%, transparent 100%);
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #10b981;
        margin-bottom: 1.5rem;
    }

    .page-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .gradient-text {
        background: linear-gradient(135deg, #10b981, #00d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-hero p {
        font-size: 1.25rem;
        color: #94a3b8;
        margin-bottom: 2rem;
    }

    /* Tab Navigation */
    .tab-navigation {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .tab-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        padding: 1.25rem 2rem;
        background: rgba(255, 255, 255, 0.03);
        border: 2px solid var(--border-color);
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 200px;
    }

    .tab-btn i {
        font-size: 1.5rem;
        color: var(--text-muted);
        margin-bottom: 0.25rem;
        transition: all 0.3s ease;
    }

    .tab-btn span {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .tab-btn small {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 400;
    }

    .tab-btn:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
    }

    .tab-btn:hover i {
        color: var(--text-secondary);
    }

    .tab-btn.active {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(0, 212, 255, 0.15));
        border-color: rgba(16, 185, 129, 0.5);
    }

    .tab-btn.active i {
        color: #10b981;
    }

    .tab-btn.active span {
        background: linear-gradient(135deg, #10b981, #00d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .tab-btn.active small {
        color: var(--text-secondary);
    }

    /* Tab Content */
    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    @keyframes fadeInTab {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Progress Section (for Study tab) */
    .progress-section {
        padding: 2rem;
        display: flex;
        justify-content: center;
    }

    .progress-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.02);
        padding: 1.5rem 2.5rem;
        border-radius: 16px;
        border: 1px solid var(--border-color);
    }

    .progress-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .progress-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .progress-icon.beginner {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .progress-icon.intermediate {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
    }

    .progress-icon.advanced {
        background: rgba(168, 85, 247, 0.2);
        color: #a855f7;
    }

    .progress-item span {
        font-size: 0.8rem;
        color: #94a3b8;
        font-weight: 500;
    }

    .progress-arrow {
        color: #64748b;
        font-size: 1.25rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .page-hero h1 {
            font-size: 2rem;
        }

        .tab-navigation {
            flex-direction: column;
            gap: 0.75rem;
        }

        .tab-btn {
            min-width: auto;
            width: 100%;
            padding: 1rem 1.5rem;
            flex-direction: row;
            justify-content: flex-start;
            gap: 1rem;
        }

        .tab-btn i {
            margin-bottom: 0;
        }

        .tab-btn span {
            font-size: 0.9rem;
        }

        .progress-container {
            flex-wrap: wrap;
            padding: 1rem;
        }

        .progress-icon {
            width: 50px;
            height: 50px;
            font-size: 1.25rem;
        }
    }

    /* Light Mode */
    :global([data-theme="light"]) .page-hero h1 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .page-hero p,
    :global([data-theme="light"]) .progress-item span {
        color: #64748b;
    }

    :global([data-theme="light"]) .tab-btn {
        background: rgba(0, 0, 0, 0.02);
    }

    :global([data-theme="light"]) .tab-btn:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    :global([data-theme="light"]) .tab-btn.active {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(8, 145, 178, 0.1));
    }

    :global([data-theme="light"]) .progress-container {
        background: rgba(0, 0, 0, 0.02);
    }
</style>
