---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LearningRoadmap from '../components/LearningRoadmap.astro';
import CapstoneProjects from '../components/CapstoneProjects.astro';
---

<Layout title="Proyectos & Roadmap | DuocUC">
    <Header />

    <!-- Page Hero -->
    <section class="page-hero">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-rocket"></i>
                <span>Proyectos & Roadmap</span>
            </div>
            <h1>Tu Camino al Ã‰xito</h1>
            <p>Ruta de aprendizaje progresiva y proyectos reales para tu portafolio</p>
            <div class="hero-progress">
                <div class="progress-item">
                    <div class="progress-icon beginner">
                        <i class="fas fa-seedling"></i>
                    </div>
                    <span>Beginner</span>
                </div>
                <div class="progress-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="progress-item">
                    <div class="progress-icon intermediate">
                        <i class="fas fa-code"></i>
                    </div>
                    <span>Intermediate</span>
                </div>
                <div class="progress-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="progress-item">
                    <div class="progress-icon advanced">
                        <i class="fas fa-star"></i>
                    </div>
                    <span>Advanced</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Learning Roadmap -->
    <LearningRoadmap />

    <!-- Capstone Projects -->
    <CapstoneProjects />

    <Footer />
</Layout>

<style>
    .page-hero {
        padding: 8rem 2rem 4rem;
        text-align: center;
        background: linear-gradient(180deg, rgba(16, 185, 129, 0.1) 0%, transparent 100%);
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #10b981;
        margin-bottom: 1.5rem;
    }

    .page-hero h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-hero p {
        font-size: 1.25rem;
        color: #94a3b8;
        margin-bottom: 2rem;
    }

    .hero-progress {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .progress-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .progress-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .progress-icon.beginner {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .progress-icon.intermediate {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
    }

    .progress-icon.advanced {
        background: rgba(168, 85, 247, 0.2);
        color: #a855f7;
    }

    .progress-item span {
        font-size: 0.8rem;
        color: #94a3b8;
        font-weight: 500;
    }

    .progress-arrow {
        color: #64748b;
        font-size: 1.25rem;
    }

    @media (max-width: 768px) {
        .page-hero h1 {
            font-size: 2rem;
        }

        .hero-progress {
            flex-wrap: wrap;
        }

        .progress-icon {
            width: 50px;
            height: 50px;
            font-size: 1.25rem;
        }
    }

    :global([data-theme="light"]) .page-hero h1 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .page-hero p,
    :global([data-theme="light"]) .progress-item span {
        color: #64748b;
    }
</style>
