---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WorkProjects from '../components/WorkProjects.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Proyectos de Trabajo | DuocUC">
    <Header />

    <!-- Page Hero -->
    <section class="page-hero">
        <div class="hero-content">
            <nav class="breadcrumb">
                <a href={`${base}/proyectos`}><i class="fas fa-arrow-left"></i> Proyectos</a>
            </nav>
            <div class="hero-badge">
                <i class="fas fa-briefcase"></i>
                <span>Proyectos de Trabajo</span>
            </div>
            <h1>Portafolio <span class="gradient-text">Profesional</span></h1>
            <p>Proyectos reales para destacar en el mercado laboral</p>

            <!-- Skills Preview -->
            <div class="skills-preview">
                <span class="skill-tag"><i class="fab fa-react"></i> Frontend</span>
                <span class="skill-tag"><i class="fas fa-server"></i> Full-Stack</span>
                <span class="skill-tag"><i class="fas fa-database"></i> APIs</span>
                <span class="skill-tag"><i class="fas fa-chart-bar"></i> Data</span>
                <span class="skill-tag"><i class="fas fa-mobile-alt"></i> Mobile</span>
                <span class="skill-tag"><i class="fas fa-cogs"></i> DevOps</span>
            </div>
        </div>
    </section>

    <!-- Work Projects -->
    <WorkProjects />

    <Footer />
</Layout>

<style>
    .page-hero {
        padding: 8rem 2rem 3rem;
        text-align: center;
        background: linear-gradient(180deg, rgba(59, 130, 246, 0.1) 0%, transparent 100%);
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .breadcrumb {
        margin-bottom: 1.5rem;
    }

    .breadcrumb a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
        color: #3b82f6;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #3b82f6;
        margin-bottom: 1.5rem;
    }

    .page-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .gradient-text {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-hero p {
        font-size: 1.25rem;
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }

    /* Skills Preview */
    .skills-preview {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
    }

    .skill-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 0.8rem;
        color: var(--text-secondary);
        transition: all 0.2s ease;
    }

    .skill-tag:hover {
        background: rgba(59, 130, 246, 0.1);
        border-color: rgba(59, 130, 246, 0.3);
        color: #3b82f6;
    }

    .skill-tag i {
        font-size: 0.9rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .page-hero h1 {
            font-size: 2rem;
        }

        .skills-preview {
            gap: 0.4rem;
        }

        .skill-tag {
            font-size: 0.75rem;
            padding: 0.35rem 0.6rem;
        }
    }

    /* Light Mode */
    :global([data-theme="light"]) .page-hero h1 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .page-hero p {
        color: #64748b;
    }

    :global([data-theme="light"]) .skill-tag {
        background: rgba(0, 0, 0, 0.03);
        color: #64748b;
    }

    :global([data-theme="light"]) .skill-tag:hover {
        background: rgba(59, 130, 246, 0.08);
        color: #2563eb;
    }

    :global([data-theme="light"]) .breadcrumb a {
        color: #64748b;
    }

    :global([data-theme="light"]) .breadcrumb a:hover {
        color: #2563eb;
    }
</style>
