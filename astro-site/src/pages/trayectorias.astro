        roadmap: [
            { phase: 'Fundamentos', duration: '2-4 meses', topics: ['Excel avanzado (pivots, macros)', 'SQL básico a intermedio', 'Estadística descriptiva'] },
            { phase: 'Análisis', duration: '3-5 meses', topics: ['SQL avanzado', 'Python para análisis (Pandas)', 'Limpieza de datos', 'Estadística inferencial'] },
            { phase: 'Visualización', duration: '3-4 meses', topics: ['Power BI o Tableau', 'Data storytelling', 'Dashboards interactivos', 'KPIs y métricas'] },
