<script>
    function initCareerPage() {
        const expandBtns = document.querySelectorAll('.expand-btn');

        expandBtns.forEach(btn => {
            btn.onclick = () => {
                const careerId = btn.getAttribute('data-career');
                const expanded = document.getElementById(`expanded-${careerId}`);

                if (expanded) {
                    expanded.classList.toggle('show');
                    btn.classList.toggle('active');

                    // Update button text
                    const span = btn.querySelector('span');
                    if (expanded.classList.contains('show')) {
                        span.textContent = 'Ocultar Roadmap';
                    } else {
                        span.textContent = 'Ver Roadmap Completo';
                    }
                }
            };
        });
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCareerPage);
    } else {
        initCareerPage();
    }

    // Re-initialize on View Transitions
    document.addEventListener('astro:page-load', initCareerPage);
</script>
