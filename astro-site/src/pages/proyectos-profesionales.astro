<Layout title="Proyectos Profesionales | Analista Programador Computacional - DuocUC">
    <Header />

    <main class="professional-projects-page">
        <!-- Hero Section -->
        <section class="page-hero">
            <div class="hero-content" data-aos="fade-up">
                <div class="hero-badge">
                    <i class="fas fa-briefcase"></i>
                    <span>Experiencia Real</span>
                </div>
                <h1>Proyectos <span class="gradient-text">Profesionales</span></h1>
                <p class="hero-subtitle">
                    Gana experiencia y dinero real trabajando en proyectos freelance.
                    Aprende a facturar, gestionar clientes y construir tu carrera como desarrollador independiente.
                </p>
                <div class="hero-stats">
                    <div class="stat">
                        <span class="stat-value">$500-15K</span>
                        <span class="stat-label">Por proyecto</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">8+</span>
                        <span class="stat-label">Tipos de proyectos</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">6</span>
                        <span class="stat-label">Plataformas</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Getting Started Tips -->
        <section class="getting-started-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-rocket"></i> Cómo Empezar</h2>
                <p>Pasos esenciales para comenzar tu carrera freelance</p>
            </div>
            <div class="tips-grid">
                {gettingStartedTips.map((tip, idx) => (
                    <a href={tip.link} class="tip-card glass-card" data-aos="fade-up" data-aos-delay={idx * 100}>
                        <div class="tip-icon">
                            <i class={tip.icon}></i>
                        </div>
                        <h3>{tip.title}</h3>
                        <p>{tip.description}</p>
                        <span class="tip-action">{tip.action} <i class="fas fa-arrow-right"></i></span>
                    </a>
                ))}
            </div>
        </section>

        <!-- Freelance Platforms -->
        <section class="platforms-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-globe"></i> Plataformas para Freelancers</h2>
                <p>Encuentra clientes y proyectos en estas plataformas</p>
            </div>
            <div class="platforms-grid">
                {freelancePlatforms.map((platform, idx) => (
                    <a href={platform.url} target="_blank" rel="noopener" class="platform-card glass-card" data-aos="fade-up" data-aos-delay={idx * 75}>
                        <div class="platform-header">
                            <div class="platform-icon">
                                {platform.icon.startsWith('devicon') ? (
                                    <i class={platform.icon}></i>
                                ) : platform.icon.startsWith('img:') ? (
                                    <img src={platform.icon.replace('img:', '')} alt={platform.name} width="32" height="32" />
                                ) : (
                                    <i class={platform.icon}></i>
                                )}
                            </div>
                            <div class="platform-info">
                                <h3>{platform.name}</h3>
                                <span class={`platform-badge badge-${platform.badge.toLowerCase().replace(' ', '-')}`}>{platform.badge}</span>
                            </div>
                        </div>
                        <p class="platform-desc">{platform.description}</p>
                        <div class="platform-stats">
                            <div class="platform-stat">
                                <i class="fas fa-dollar-sign"></i>
                                <span>{platform.avgRate}</span>
                            </div>
                            <div class="platform-stat">
                                <i class="fas fa-crosshairs"></i>
                                <span>{platform.focus}</span>
                            </div>
                        </div>
                        <div class="platform-tips">
                            <strong><i class="fas fa-lightbulb"></i> Tips:</strong>
                            <ul>
                                {platform.tips.map(tip => (
                                    <li>{tip}</li>
                                ))}
                            </ul>
                        </div>
                    </a>
                ))}
            </div>
        </section>

        <!-- Project Types -->
        <section class="projects-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-folder-open"></i> Tipos de Proyectos y Precios</h2>
                <p>Proyectos reales con rangos de precios del mercado</p>
            </div>

            <!-- Category Filters -->
            <div class="category-filters" data-aos="fade-up">
                {projectCategories.map(cat => (
                    <button class={`filter-btn ${cat.id === 'all' ? 'active' : ''}`} data-filter={cat.id}>
                        <i class={cat.icon}></i>
                        <span>{cat.name}</span>
                    </button>
                ))}
            </div>

            <div class="projects-grid">
                {projectTypes.map((project, idx) => (
                    <div class={`project-type-card glass-card ${project.hot ? 'hot' : ''}`}
                         data-category={project.category}
                         data-aos="fade-up"
                         data-aos-delay={idx * 50}>
                        <div class="project-header">
                            <h3>{project.title}</h3>
                            {project.hot && <span class="hot-badge">En demanda</span>}
                        </div>
                        <p class="project-desc">{project.description}</p>

                        <div class="project-meta">
                            <div class="meta-item price">
                                <i class="fas fa-tag"></i>
                                <span>{project.priceRange}</span>
                            </div>
                            <div class="meta-item time">
                                <i class="fas fa-clock"></i>
                                <span>{project.timeEstimate}</span>
                            </div>
                            <div class={`meta-item difficulty ${project.difficulty.toLowerCase()}`}>
                                <i class="fas fa-signal"></i>
                                <span>{project.difficulty}</span>
                            </div>
                        </div>

                        <div class="project-skills">
                            <strong>Skills requeridas:</strong>
                            <div class="skills-list">
                                {project.skills.map(skill => (
                                    <span class="skill-tag">{skill}</span>
                                ))}
                            </div>
                        </div>

                        <div class="project-deliverables">
                            <strong>Entregables típicos:</strong>
                            <ul>
                                {project.deliverables.map(d => (
                                    <li><i class="fas fa-check"></i> {d}</li>
                                ))}
                            </ul>
                        </div>

                        <div class="project-footer">
                            <div class="client-type">
                                <i class="fas fa-users"></i>
                                <span>{project.clientType}</span>
                            </div>
                            <div class="project-tools">
                                {project.tools.slice(0, 3).map(tool => (
                                    <span class="tool-badge">{tool}</span>
                                ))}
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Billing & Legal Resources (Chile) -->
        <section id="templates" class="billing-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-file-invoice-dollar"></i> Facturación y Legal (Chile)</h2>
                <p>Recursos para facturar profesionalmente como independiente</p>
            </div>
            <div class="billing-grid">
                {billingResources.map((resource, idx) => (
                    <a href={resource.url} target="_blank" rel="noopener" class="billing-card glass-card" data-aos="fade-up" data-aos-delay={idx * 75}>
                        <div class="billing-icon">
                            <i class={resource.icon}></i>
                        </div>
                        <div class="billing-info">
                            <h3>{resource.name}</h3>
                            <p>{resource.description}</p>
                        </div>
                        <i class="fas fa-external-link-alt link-icon"></i>
                    </a>
                ))}
            </div>

            <div class="billing-tips glass-card" data-aos="fade-up">
                <h3><i class="fas fa-info-circle"></i> Tips de Facturación</h3>
                <div class="tips-content">
                    <div class="tip-item">
                        <strong>1. Inicio de Actividades</strong>
                        <p>Debes iniciar actividades en el SII antes de emitir tu primera boleta.</p>
                    </div>
                    <div class="tip-item">
                        <strong>2. Boleta de Honorarios</strong>
                        <p>Para servicios profesionales, emite boleta de honorarios (retención 13.75% 2025).</p>
                    </div>
                    <div class="tip-item">
                        <strong>3. Factura Exenta</strong>
                        <p>Si facturas a empresas extranjeras, puedes emitir factura exenta de IVA.</p>
                    </div>
                    <div class="tip-item">
                        <strong>4. Contrato</strong>
                        <p>SIEMPRE firma un contrato antes de comenzar. Define alcance, pagos y plazos.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Reputation Section -->
        <section id="reputation" class="reputation-section">
            <div class="section-header" data-aos="fade-up">
                <h2><i class="fas fa-star"></i> Construye tu Reputación</h2>
                <p>La reputación es tu activo más valioso como freelancer</p>
            </div>
            <div class="reputation-grid">
                <div class="reputation-card glass-card" data-aos="fade-up">
                    <div class="rep-icon"><i class="fas fa-comments"></i></div>
                    <h3>Comunicación Clara</h3>
                    <p>Responde rápido, sé proactivo con updates y maneja expectativas desde el inicio.</p>
                </div>
                <div class="reputation-card glass-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="rep-icon"><i class="fas fa-clock"></i></div>
                    <h3>Cumple Plazos</h3>
                    <p>Entrega a tiempo o antes. Si hay delays, comunica inmediatamente.</p>
                </div>
                <div class="reputation-card glass-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="rep-icon"><i class="fas fa-gem"></i></div>
                    <h3>Calidad Consistente</h3>
                    <p>Entrega trabajo de calidad consistente. Un trabajo mediocre arruina tu reputación.</p>
                </div>
                <div class="reputation-card glass-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="rep-icon"><i class="fas fa-hand-holding-heart"></i></div>
                    <h3>Pide Reviews</h3>
                    <p>Al terminar exitosamente, pide una review/testimonio. Son oro para tu perfil.</p>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content glass-card" data-aos="zoom-in">
                <h2>¿Listo para tu Primer Proyecto?</h2>
                <p>Construye tu portafolio con proyectos de práctica antes de buscar clientes reales</p>
                <div class="cta-buttons">
                    <a href={`${baseUrl}/proyectos-estudio`} class="cta-btn primary">
                        <i class="fas fa-laptop-code"></i> Proyectos de Estudio
                    </a>
                    <a href={`${baseUrl}/recursos`} class="cta-btn secondary">
                        <i class="fas fa-tools"></i> Herramientas y Recursos
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<script is:inline>
document.addEventListener('astro:page-load', initProfessionalProjects);
document.addEventListener('DOMContentLoaded', initProfessionalProjects);

function initProfessionalProjects() {
    // Category filters
    const filterBtns = document.querySelectorAll('.category-filters .filter-btn');
    const projectCards = document.querySelectorAll('.project-type-card');

    filterBtns.forEach(btn => {
        btn.onclick = () => {
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const filter = btn.dataset.filter;
            projectCards.forEach(card => {
                if (filter === 'all' || card.dataset.category === filter) {
                    card.style.display = 'flex';
                    card.style.animation = 'fadeIn 0.3s ease';
                } else {
                    card.style.display = 'none';
                }
            });
        };
    });
}
</script>

