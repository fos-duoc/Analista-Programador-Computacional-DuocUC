---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AIToolsSection from '../components/AIToolsSection.astro';
import Recursos2025 from '../components/Recursos2025.astro';
import YouTubeSection from '../components/YouTubeSection.astro';
import NotionEmbed from '../components/NotionEmbed.astro';
import CodeSnippets from '../components/CodeSnippets.astro';
import FAQSection from '../components/FAQSection.astro';
import CertificationsSection from '../components/CertificationsSection.astro';
import TerminalDemo from '../components/TerminalDemo.astro';
import WebVitalsSection from '../components/WebVitalsSection.astro';
import SedesMapSection from '../components/SedesMapSection.astro';
import ProfessionalProjectsSection from '../components/ProfessionalProjectsSection.astro';
import ProgressIndicators from '../components/ProgressIndicators.astro';
// Interactive Tools
import PasswordGeneratorSection from '../components/tools/PasswordGeneratorSection.astro';
import SQLQueryGeneratorSection from '../components/tools/SQLQueryGeneratorSection.astro';
import QuizGeneratorSection from '../components/tools/QuizGeneratorSection.astro';
import GanttGeneratorSection from '../components/tools/GanttGeneratorSection.astro';
// Decision Guides - AWS Well-Architected pattern
import DecisionGuides from '../components/DecisionGuides.astro';
---

<Layout title="Recursos de Aprendizaje | DuocUC">
    <Header />
    <Breadcrumbs />

    <!-- Page Hero -->
    <section class="page-hero">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-book-reader"></i>
                <span>Centro de Recursos</span>
            </div>
            <h1>Recursos de Aprendizaje</h1>
            <p>Herramientas, videos, documentación y código para potenciar tu aprendizaje</p>
            <div class="hero-cards">
                <!-- Generadores Interactivos -->
                <a href="#gantt-generator" class="quick-nav featured"
                   data-premium-tooltip="Generador de Gantt|Crea diagramas de Gantt interactivos con drag & drop y múltiples vistas|Quarter,Semestre,Año,Templates|tool|fa-project-diagram|HERRAMIENTA">
                    <i class="fas fa-project-diagram"></i>
                    <span>Gantt</span>
                </a>
                <a href="#sql-generator" class="quick-nav featured"
                   data-premium-tooltip="Constructor SQL|Genera queries SQL de forma visual sin escribir código|SELECT,INSERT,UPDATE,DELETE|tool|fa-database|HERRAMIENTA">
                    <i class="fas fa-database"></i>
                    <span>SQL Builder</span>
                </a>
                <a href="#password-generator" class="quick-nav featured"
                   data-premium-tooltip="Generador de Contraseñas|Genera contraseñas criptográficamente seguras con Web Crypto API|Entropía,Fortaleza,Opciones|tool|fa-key|HERRAMIENTA">
                    <i class="fas fa-key"></i>
                    <span>Passwords</span>
                </a>
                <a href="#quiz-generator" class="quick-nav featured"
                   data-premium-tooltip="Quizzes de Certificación|160+ preguntas de JavaScript, Python, SQL, Java POO, AWS, Docker y más|10 Categorías,Timer,Explicaciones|tool|fa-clipboard-check|HERRAMIENTA">
                    <i class="fas fa-clipboard-check"></i>
                    <span>Quiz</span>
                </a>
                <!-- Recursos existentes -->
                <a href="#ai-tools" class="quick-nav"
                   data-premium-tooltip="Herramientas AI|GitHub Copilot, Claude, ChatGPT, DeepSeek y más para estudiantes|Gratuitas,Productividad|feature|fa-robot|RECURSOS">
                    <i class="fas fa-robot"></i>
                    <span>AI Tools</span>
                </a>
                <a href="#videos" class="quick-nav"
                   data-premium-tooltip="Videos Educativos|Tutoriales, arquitectura y fundamentos de hardware curados|Branch Education,Data Eng|feature|fa-youtube|RECURSOS">
                    <i class="fab fa-youtube"></i>
                    <span>Videos</span>
                </a>
                <a href="#notion-workspace" class="quick-nav"
                   data-premium-tooltip="Notion Workspace|Plantillas y recursos para organizar tu aprendizaje|Templates,Organización|feature|fa-file-alt|RECURSOS">
                    <i class="fas fa-file-alt"></i>
                    <span>Notion</span>
                </a>
                <a href="#code-snippets" class="quick-nav"
                   data-premium-tooltip="Snippets de Código|Ejemplos prácticos en Python, Java, SQL y JavaScript|4 Lenguajes,Copy Button|feature|fa-code|RECURSOS">
                    <i class="fas fa-code"></i>
                    <span>Código</span>
                </a>
                <a href="#recursos-2025" class="quick-nav"
                   data-premium-tooltip="Plataformas de Cursos|Coursera, DataCamp, Whizlabs, freeCodeCamp y comunidades|Certificaciones,Gratuitos|feature|fa-graduation-cap|RECURSOS">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Cursos</span>
                </a>
                <a href="#certifications" class="quick-nav"
                   data-premium-tooltip="Certificaciones IT|35+ certificaciones en Cloud, Data, DevOps y más|AWS,Azure,Snowflake|feature|fa-award|RECURSOS">
                    <i class="fas fa-award"></i>
                    <span>Certificaciones</span>
                </a>
                <a href="#faq" class="quick-nav"
                   data-premium-tooltip="Preguntas Frecuentes|8 preguntas comunes sobre la carrera y recursos|Estudiantes,DuocUC|info|fa-question-circle|AYUDA">
                    <i class="fas fa-question-circle"></i>
                    <span>FAQ</span>
                </a>
                <a href="#terminal-demo" class="quick-nav"
                   data-premium-tooltip="Terminal Interactivo|Practica comandos de Git, Docker, npm, Python, SQL y Kubernetes|6 Sesiones,Copiar|tool|fa-terminal|HERRAMIENTA">
                    <i class="fas fa-terminal"></i>
                    <span>Terminal</span>
                </a>
                <a href="#web-vitals" class="quick-nav"
                   data-premium-tooltip="Métricas de Rendimiento|Dashboard de Core Web Vitals y optimizaciones aplicadas|LCP,FID,CLS,Score 94|info|fa-tachometer-alt|MÉTRICAS">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Performance</span>
                </a>
                <a href="#sedes-duocuc" class="quick-nav"
                   data-premium-tooltip="Sedes DuocUC|Mapa interactivo con 8 sedes de la Escuela de Informática|4 Regiones,Filtros|info|fa-map-marked-alt|INFORMACIÓN">
                    <i class="fas fa-map-marked-alt"></i>
                    <span>Sedes</span>
                </a>
                <a href="#professional-projects" class="quick-nav"
                   data-premium-tooltip="Proyectos Profesionales|6 proyectos para construir tu portafolio como desarrollador|Full-Stack,Data,DevOps|feature|fa-briefcase|PROYECTOS">
                    <i class="fas fa-briefcase"></i>
                    <span>Proyectos Pro</span>
                </a>
                <a href="#progress-indicators" class="quick-nav"
                   data-premium-tooltip="Progress Indicators|Indicadores de progreso lineales, circulares y de pasos|Linear,Circular,Step|feature|fa-chart-line|UI">
                    <i class="fas fa-chart-line"></i>
                    <span>Progress</span>
                </a>
                <a href="#decision-guides" class="quick-nav featured"
                   data-premium-tooltip="Decision Guides|Guías interactivas para elegir tecnologías: SQL vs NoSQL, Monolito vs Microservicios|AWS Well-Architected,Fowler|tool|fa-route|GUÍAS">
                    <i class="fas fa-route"></i>
                    <span>Decisions</span>
                </a>
            </div>
        </div>
    </section>

    <!-- HERRAMIENTAS INTERACTIVAS -->
    <!-- Gantt Chart Generator -->
    <GanttGeneratorSection />

    <!-- SQL Query Generator -->
    <SQLQueryGeneratorSection />

    <!-- Password Generator -->
    <PasswordGeneratorSection />

    <!-- Quiz/Test Generator -->
    <QuizGeneratorSection />

    <!-- Decision Guides - AWS Well-Architected Pattern -->
    <DecisionGuides />

    <!-- RECURSOS DE APRENDIZAJE -->
    <!-- AI Tools Section -->
    <AIToolsSection />

    <!-- YouTube Videos Section -->
    <YouTubeSection />

    <!-- Notion Workspace -->
    <NotionEmbed />

    <!-- Code Snippets -->
    <CodeSnippets />

    <!-- Recursos 2025 -->
    <Recursos2025 />

    <!-- Certificaciones Recomendadas -->
    <CertificationsSection />

    <!-- FAQ Section -->
    <FAQSection />

    <!-- Terminal Demo -->
    <TerminalDemo />

    <!-- Web Vitals Dashboard -->
    <WebVitalsSection />

    <!-- Sedes DuocUC Map -->
    <SedesMapSection />

    <!-- Proyectos Profesionales -->
    <ProfessionalProjectsSection />

    <!-- Progress Indicators -->
    <ProgressIndicators />

    <Footer />
</Layout>

<style>
    .page-hero {
        padding: 8rem 2rem 4rem;
        text-align: center;
        background: linear-gradient(180deg, rgba(245, 158, 11, 0.1) 0%, transparent 100%);
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #f59e0b;
        margin-bottom: 1.5rem;
    }

    .page-hero h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #f8fafc, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-hero p {
        font-size: 1.25rem;
        color: #94a3b8;
        margin-bottom: 2rem;
    }

    .hero-cards {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .quick-nav {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .quick-nav:hover {
        background: rgba(245, 158, 11, 0.1);
        border-color: rgba(245, 158, 11, 0.3);
        transform: translateY(-4px);
    }

    .quick-nav.featured {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(139, 92, 246, 0.1));
        border-color: rgba(0, 212, 255, 0.3);
    }

    .quick-nav.featured:hover {
        background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(139, 92, 246, 0.2));
        border-color: rgba(0, 212, 255, 0.5);
        box-shadow: 0 4px 20px rgba(0, 212, 255, 0.2);
    }

    .quick-nav.featured i {
        color: #00d4ff;
    }

    .quick-nav i {
        font-size: 1.5rem;
        color: #f59e0b;
    }

    .quick-nav span {
        font-size: 0.85rem;
        color: #94a3b8;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .page-hero h1 {
            font-size: 2rem;
        }

        .hero-cards {
            gap: 0.75rem;
        }

        .quick-nav {
            padding: 0.75rem 1rem;
        }

        .quick-nav i {
            font-size: 1.25rem;
        }
    }

    :global([data-theme="light"]) .page-hero h1 {
        background: linear-gradient(135deg, #1e293b, #475569);
        -webkit-background-clip: text;
        background-clip: text;
    }

    :global([data-theme="light"]) .page-hero p,
    :global([data-theme="light"]) .quick-nav span {
        color: #64748b;
    }
</style>
